/* pages/publish/publish.wxss - 增强版 */
.publish-page {
    background: var(--neutral-light);
    min-height: 100vh;
    padding: 30rpx;
  }
  
  /* 发布表单 */
  .publish-form {
    background: linear-gradient(135deg, var(--primary-pink), var(--accent-beige));
    border-radius: 24rpx;
    padding: 20rpx;
    box-shadow: 0 8rpx 32rpx rgba(140, 123, 108, 0.08);
    border: 1rpx solid rgba(232, 180, 184, 0.2);
  }
  
  .form-group {
    margin-bottom: 60rpx;
  }
  
  .form-label {
    font-size: 30rpx;
    color: var(--neutral-text);
    margin-bottom: 10rpx;
    font-weight: 600;
    display: flex;
    align-items: center;
  }
  
  .form-label::before {
    content: '';
    width: 8rpx;
    height: 30rpx;
    background: var(--primary-coral);
    border-radius: 4rpx;
    margin-right: 15rpx;
  }
  
  .label-hint {
    font-size: 24rpx;
    color: var(--neutral-gray);
    margin-left: 15rpx;
    font-weight: normal;
  }
  
  /* 已选标签显示 */
  .selected-tags {
    background: rgba(255, 255, 255, 0.7);
    border-radius: 12rpx;
    padding: 20rpx;
    margin-bottom: 20rpx;
    border: 1rpx solid rgba(232, 180, 184, 0.3);
  }
  
  .selected-text {
    font-size: 26rpx;
    color: var(--primary-red);
    font-weight: 600;
  }
  

  
  /* 图片上传容器 */
  .image-upload-container {
    position: relative;
  }
  
  .image-upload {
    border: 2rpx dashed var(--primary-pink);
    border-radius: 16rpx;
    padding: 10rpx 10rpx;
    text-align: center;
    background: rgba(255, 255, 255, 0.6);
    transition: all 0.3s ease;
    position: relative;
  }
  
  .image-upload.active {
    border-color: var(--primary-coral);
    background: rgba(255, 255, 255, 0.8);
    padding: 10rpx 10rpx;
  }
  
  .upload-icon {
    font-size: 60rpx;
    color: var(--primary-coral);
    margin-bottom: 20rpx;
  }
  
  .upload-text {
    color: var(--neutral-dark);
    font-size: 28rpx;
    font-weight: 600;
    margin-bottom: 8rpx;
  }
  
  .upload-hint {
    color: var(--neutral-gray);
    font-size: 24rpx;
    margin-bottom: 10rpx;
  }
  
  .upload-options {
    margin-top: 15rpx;
  }
  
  .option-text {
    font-size: 22rpx;
    color: var(--primary-coral);
    background: rgba(232, 180, 184, 0.1);
    padding: 8rpx 16rpx;
    border-radius: 12rpx;
  }
  
  /* 图片预览增强 */
  .image-preview {
    display: flex;
    flex-wrap: wrap;
    gap: 20rpx;
    margin-top: 30rpx;
  }
  
  .preview-item {
    position: relative;
    width: 149rpx;
    height: 149rpx;
    border-radius: 16rpx;
    overflow: hidden;
    box-shadow: 0 4rpx 16rpx rgba(140, 123, 108, 0.1);
    transition: all 0.3s ease;
  }
  
  .preview-item:active {
    transform: scale(0.95);
  }
  
  .preview-image {
    width: 100%;
    height: 100%;
    background: var(--accent-beige);
  }
  
  .image-order {
    position: absolute;
    top: 8rpx;
    left: 8rpx;
    background: rgba(0, 0, 0, 0.6);
    color: white;
    font-size: 20rpx;
    padding: 4rpx 10rpx;
    border-radius: 10rpx;
    font-weight: bold;
  }
  
  .delete-image {
    position: absolute;
    top: 8rpx;
    right: 8rpx;
    width: 36rpx;
    height: 36rpx;
    background: var(--primary-red);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 22rpx;
    font-weight: bold;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  }
  
  /* 分类选择增强 */
  .category-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 10rpx;
  }
  
  .category-item {
    padding: 20rpx 20rpx;
    background: rgba(236, 179, 179, 0.7);
    border: 2rpx solid var(--primary-pink);
    border-radius: 50rpx;
    color: var(--neutral-text);
    font-size: 26rpx;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 10rpx;
    position: relative;
    min-width: 160rpx;
    justify-content: center;
  }
  
  .category-item.active {
    background: linear-gradient(135deg, var(--primary-pink), var(--primary-coral));
    color: rgb(255, 255, 255);
    border-color: var(--primary-coral);
    transform: scale(1.05);
  }
  
  .category-icon {
    font-size: 28rpx;
  }
  
  .category-label {
    font-weight: 600;
  }
  
  
  /* 图片操作面板 */
  .image-action-sheet {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 999;
    visibility: hidden;
    opacity: 0;
    transition: all 0.3s ease;
  }
  
  .image-action-sheet.show {
    visibility: visible;
    opacity: 1;
  }
  
  .action-mask {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(5rpx);
  }
  
  .action-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: white;
    border-radius: 30rpx 30rpx 0 0;
    padding: 40rpx;
    transform: translateY(100%);
    transition: transform 0.3s ease;
  }
  
  .image-action-sheet.show .action-content {
    transform: translateY(0);
  }
  
  .action-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 40rpx;
    padding-bottom: 20rpx;
    padding:30rpx 0 20rpx 0;
    border-bottom: 1rpx solid var(--neutral-gray);
  }
  
  .action-title {
    font-size: 40rpx;
    color: var(--neutral-text);
    font-weight: bold;
  }
  
  .action-close {
    font-size: 40rpx;
    color: var(--neutral-gray);
    font-weight: bold;
  }
  
  .action-buttons {
    display: flex;
    gap: 40rpx;
    justify-content: center;
  }
  
  .action-btn {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 30rpx;
    border-radius: 20rpx;
    transition: all 0.3s ease;
    min-width: 200rpx;
  }
  
  .action-btn:active {
    transform: scale(0.95);
  }
  
  .take-photo {
    background: linear-gradient(135deg, var(--primary-pink), var(--primary-coral));
    color: white;
  }
  
  .choose-album {
    background: linear-gradient(135deg, var(--accent-yellow), var(--accent-gold));
    color: var(--neutral-text);
  }
  
  .btn-icon {
    font-size: 60rpx;
    margin-bottom: 15rpx;
  }
  
  .btn-text {
    font-size: 28rpx;
    font-weight: 600;
  }
  
  /* 其他样式保持不变... */
  .form-input, .form-textarea {
    background: rgba(255, 255, 255, 0.9);
    border: 2rpx solid var(--primary-pink);
    border-radius: 16rpx;
    padding:  32rpx;
    font-size: 28rpx;
    color: var(--neutral-text);
    width: 100%;
    box-sizing: border-box;
    transition: all 0.3s ease;
    min-height:100rpx;
  }

  .form-textarea {
    height: 200rpx;
    line-height: 1.6;
  }
  
  .char-count {
    text-align: right;
    font-size: 24rpx;
    color: var(--neutral-gray);
    margin-top: 10rpx;
  }
  
  .transaction-type {
    display: flex;
    gap: 20rpx;
    margin-bottom: 30rpx;
  }
  
  .type-option {
    flex: 1;
    text-align: center;
    padding: 25rpx;
    background: rgba(255, 255, 255, 0.7);
    border: 2rpx solid var(--primary-pink);
    border-radius: 16rpx;
    color: var(--neutral-text);
    transition: all 0.3s ease;
  }
  
  .type-option.active {
    background: linear-gradient(135deg, var(--primary-pink), var(--primary-coral));
    color: white;
    border-color: var(--primary-coral);
    box-shadow: 0 4rpx 16rpx rgba(232, 180, 184, 0.3);
  }
  
  .type-icon {
    font-size: 40rpx;
    margin-bottom: 10rpx;
  }
  
  .type-label {
    font-size: 26rpx;
    font-weight: 600;
  }
  
  .price-input-wrapper {
    position: relative;
    display: flex;
    align-items: center;
  }
  
  .price-symbol {
    position: absolute;
    left: 32rpx;
    font-size: 32rpx;
    color: var(--primary-red);
    font-weight: bold;
    z-index: 1;
  }
  
  .price-input {
    padding-left: 60rpx;
    font-size: 32rpx;
    font-weight: bold;
    color: var(--primary-red);
  }
  
  .publish-btn {
    background: linear-gradient(135deg, var(--primary-coral), var(--primary-red));
    color: white;
    border: none;
    border-radius: 16rpx;
    padding: 30rpx;
    font-size: 40rpx;
    font-weight: bold;
    margin-top:40rpx;
    box-shadow: 0 8rpx 32rpx rgba(232, 180, 184, 0.4);
    transition: all 0.3s ease;
  }
  
  .publish-btn:active {
    transform: translateY(2rpx);
    box-shadow: 0 4rpx 16rpx rgba(232, 180, 184, 0.4);
  }
  
  .publish-btn:disabled {
    background: var(--neutral-gray);
    box-shadow: none;
    transform: none;
    color: var(--neutral-light);
  }
  
  .publish-tips {
    text-align: center;
    margin-top: 30rpx;
    padding: 20rpx;
    background: rgba(255, 255, 255, 0.5);
    border-radius: 12rpx;
    border: 1rpx solid rgba(232, 180, 184, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 15rpx;
    transition: all 0.3s ease;
  }
  
  .publish-tips:active {
    background: rgba(255, 255, 255, 0.7);
  }
  
  .tips-icon {
    font-size: 28rpx;
    color: var(--primary-coral);
  }
  
  .tips-text {
    font-size: 26rpx;
    color: var(--neutral-dark);
    font-weight: 600;
  }