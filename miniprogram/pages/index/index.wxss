/* pages/index/index.wxss */
.container {
    padding: 20rpx;
  }
  
  .search-bar {
    margin-bottom: 30rpx;
  }
  
  .search-input {
    height: 80rpx;
    background: #f5f5f5;
    border-radius: 40rpx;
    padding: 0 30rpx;
    font-size: 28rpx;
  }
  .search-placeholder {
    color: #999;
    font-size: 28rpx;
    line-height: 160rpx;
    text-align: center;
  }
  
  .tabs {
    display: flex;
    margin-bottom: 30rpx;
    border-bottom: 1rpx solid #eee;
  }
  
  .tab {
    flex: 1;
    text-align: center;
    padding: 20rpx 0;
    font-size: 32rpx;
    color: #666;
  }
  
  .tab.active {
    color: #ffffff;
    border-bottom: 4rpx solid #a55f6e;
  }
  
  .goods-list {
    display: flex;
    flex-direction: column;
    gap: 30rpx;
  }
  

  
  .goods-image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
    margin-right: 30rpx;
  }
  
  .goods-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  .goods-item {
    padding: 0rpx;
    margin: 20rpx;
    background: #ffffff;
    border-radius: 12rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
    position: relative;
    min-height: 200rpx;
  }
  
  .goods-title {
    width: 400rpx;
    height: 40rpx;
    font-size: 32rpx;
    font-weight: bold;
    color: #333333;
    margin-bottom: 15rpx;
    line-height: 40rpx;
  }
  
  .goods-price {
    width: 200rpx;
    font-size: 50rpx;
    font-weight: bold;
    color: #dd7724;
    position: absolute;
    right: 20rpx;
    top: 20rpx;
    text-align: right;
    line-height: 50rpx;
  }
  
  .goods-user {
    width: 300rpx;
    font-size: 28rpx;
    color: #666666;
    margin-bottom: 10rpx;
    line-height: 34rpx;
  }
  
  .goods-time {
    width: 300rpx;
    height: 34rpx;
    font-size: 24rpx;
    color: #d31a1a;
    margin-bottom: 10rpx;
    line-height: 34rpx;

  }
  
  .goods-tag {
