/* components/confirm-popup/confirm-popup.wxss */
.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  z-index: 999;
}

.popup-container {
  width: 100%;
  background: white;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 80vh;
  overflow-y: auto;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.popup-content {
  padding: 40rpx 32rpx;
}

.popup-header {
  margin-bottom: 32rpx;
}

.popup-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  display: block;
}

/* 商品信息 */
.product-info {
  display: flex;
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 24rpx;
}

.product-details {
  flex: 1;
}

.product-title {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  display: block;
  margin-bottom: 16rpx;
}

.price-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  font-size: 32rpx;
  color: #ff6a00;
  font-weight: 600;
}

.product-quantity {
  font-size: 24rpx;
  color: #999;
}

/* 订单信息 */
.order-info {
  margin-bottom: 32rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.info-value {
  font-size: 28rpx;
  color: #333;
}

/* 温馨提示 */
.tip-section {
  background: #fff9e6;
  padding: 24rpx;
  border-radius: 8rpx;
}

.tip-label {
  font-size: 26rpx;
  color: #e6a23c;
  font-weight: 500;
  display: block;
  margin-bottom: 12rpx;
}

.tip-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 按钮区域 */
.button-group {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
  padding: 24rpx 32rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  margin: 0 12rpx;
}

.btn-cancel {
  background: #f5f5f5;
  color: #666;
}

.btn-confirm {
  background: #ff6a00;
  color: white;
}