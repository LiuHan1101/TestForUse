/* pages/detail/detail.wxss */
.detail-page {
  background: #ffffff;
  min-height: 100vh;
  padding-bottom: 160rpx;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 卖家信息 - 适配publisherInfo字段 */
.seller-info {
  background: #fff;
  padding: 30rpx;
  margin: 0 0 8rpx 0;
  border-radius: 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  border-bottom: 1rpx solid #f0f0f0;
}

.seller-header {
  display: flex;
  align-items: center;
  width: 100%;
}

.seller-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  object-fit: cover;
}

.seller-details {
  flex: 1;
}

.seller-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
}

.seller-verified {
  color: #07c160;
  margin-left: 8rpx;
  font-size: 24rpx;
}

.seller-rating {
  display: flex;
  align-items: center;
}

.rating-stars {
  color: #ffb400;
  font-size: 24rpx;
  margin-right: 10rpx;
}

.rating-score {
  font-size: 24rpx;
  color: #666;
}

.seller-college {
  font-size: 24rpx;
  color: #999;
  text-align: right;
  margin-left: 20rpx;
}

/* 图片轮播板块 */
.image-swiper-panel {
  background: #fff;
  margin-bottom: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.image-swiper {
  height: 500rpx;
}

.swiper {
  height: 100%;
}

.swiper-image {
  width: 100%;
  height: 100%;
  display: block;
  object-fit: contain;
  background: #f8f9fa;
}

.image-indicator {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  background: rgba(0, 0, 0, 0.5);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 商品信息板块 */
.content-panel.goods-info {
  background: #fff;
  padding: 30rpx 30rpx 30rpx 40rpx;
  border-radius: 16rpx;
  margin: 0 6rpx;
  border: 1rpx solid #f0f0f0;
  border-bottom: none;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 商品标题和交易类型 */
.goods-title-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.goods-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
  line-height: 1.4;
}

.goods-type {
  font-size: 24rpx;
  color: #999;
  padding: 6rpx 16rpx;
  background: #f5f5f5;
  border-radius: 6rpx;
  white-space: nowrap;
}

/* 价格部分 - 适配多种价格显示 */
.price-section {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.price-container {
  flex: 1;
  display: flex;
  align-items: flex-start;
  height: auto;
  min-height: 56rpx;
}

/* 现金价格样式 */
.price {
  font-size: 52rpx;
  font-weight: bold;
  color: #ff6b35;
  line-height: 1;
  padding-top: 4rpx;
}

/* 换物样式 */
.swap-info {
  font-size: 44rpx;
  font-weight: bold;
  color: #52c41a;
  line-height: 1;
  padding-top: 4rpx;
}

/* 价格面议样式 */
.price-negotiable {
  font-size: 44rpx;
  font-weight: bold;
  color: #999;
  line-height: 1;
  padding-top: 4rpx;
}

.price-range {
  font-size: 28rpx;
  color: #666;
  margin-left: 16rpx;
  padding-top: 12rpx;
}

/* 期望交换物品样式 */
.expected-swap-section {
  margin-top: 20rpx;
  padding: 16rpx;
  background: #fff9e6;
  border-radius: 8rpx;
  border-left: 4rpx solid #ffd666;
}

.expected-swap-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.expected-swap-value {
  font-size: 28rpx;
  color: #e65100;
  font-weight: 500;
}

/* 标签样式 - 适配tags字段 */
.tags-section {
  margin-top: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.tags-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-item {
  font-size: 26rpx;
  color: #ffffff;
  background: #bad476;
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
  display: inline-block;
}

/* 商品描述 */
.description-section {
  margin-top: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.description-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.description-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  white-space: pre-wrap;
}

/* 其他信息 */
.meta-info {
  margin-top: 30rpx;
  color: #999;
  font-size: 24rpx;
}

.meta-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.meta-label {
  color: #666;
}

.meta-value {
  text-align: right;
}

/* 交易类型提示 */
.transaction-tip {
  margin-top: 30rpx;
  padding: 20rpx;
  background: #f0f9ff;
  border-radius: 8rpx;
  border-left: 4rpx solid #1890ff;
}

.tip-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

/* 收藏按钮 */
.favorite-btn {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.favorite-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.favorite-text {
  font-size: 20rpx;
  color: #666;
}

/* 主要操作按钮 */
.action-buttons {
  flex: 1;
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.2s;
}

/* 聊天按钮 */
.chat-btn {
  background: #f5f5f5;
  color: #333;
}

.chat-btn:active {
  background: #e8e8e8;
}

/* 购买/出售按钮 - 根据交易类型显示不同颜色 */
.action-btn.primary {
  background: linear-gradient(135deg, #FFD262, #FFB400);
  color: #1a1818;
}

.action-btn.primary:active {
  opacity: 0.9;
}

/* 换物按钮 */
.action-btn.swap {
  background: linear-gradient(135deg, #bad476, #8bc34a);
  color: #ffffff;
}

.action-btn.swap:active {
  opacity: 0.9;
}

/* 确认弹窗 */
.confirm-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.popup-content {
  background: #fff;
  border-radius: 20rpx;
  width: 80%;
  max-width: 600rpx;
  overflow: hidden;
}

.popup-header {
  padding: 40rpx 30rpx;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.popup-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.popup-product {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
}

.popup-product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  object-fit: cover;
}

.popup-product-info {
  flex: 1;
}

.popup-product-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.popup-product-price {
  font-size: 36rpx;
  color: #ff6b35;
  font-weight: bold;
}

.popup-body {
  padding: 30rpx;
}

.popup-actions {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.popup-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
}

.popup-btn.cancel {
  background: #f5f5f5;
  color: #666;
}

.popup-btn.confirm {
  background: linear-gradient(135deg, #FFD262, #FFB400);
  color: #1a1818;
}

/* 图片加载失败样式 */
.image-error {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  color: #999;
  font-size: 26rpx;
}

/* 响应式适配 */
@media screen and (max-width: 320px) {
  .goods-title {
    font-size: 32rpx;
  }
  
  .price {
    font-size: 48rpx;
  }
  
  .action-btn {
    font-size: 28rpx;
    height: 80rpx;
  }
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 200rpx 40rpx;
  color: #999;
  font-size: 28rpx;
}

.empty-state .icon {
  font-size: 120rpx;
  color: #ccc;
  margin-bottom: 30rpx;
}