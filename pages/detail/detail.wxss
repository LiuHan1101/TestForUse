.detail-page {
    background: #f5f5f5;
    padding-bottom: 120rpx;
  }
  
  /* 图片轮播 */
  .image-swiper {
    height: 500rpx;
    background: #fff;
  }
  
  .swiper {
    height: 100%;
  }
  
  .swiper-image {
    width: 100%;
    height: 100%;
  }
  
  /* 商品信息 */
  .goods-info {
    background: #fff;
    padding: 30rpx;
    margin-bottom: 20rpx;
  }
  
  .price-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
  }
  
  .price {
    font-size: 48rpx;
    font-weight: bold;
    color: #ff6b35;
  }
  
  .favorite-btn {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 16rpx;
  }
  
  .favorite-btn.favorited .favorite-icon {
    color: #ff6b35;
  }
  
  .favorite-icon {
    font-size: 40rpx;
    margin-bottom: 8rpx;
  }
  
  .favorite-text {
    font-size: 24rpx;
    color: #666;
  }
  
  .title-section {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 20rpx;
  }
  
  .goods-title {
    flex: 1;
    font-size: 32rpx;
    font-weight: 600;
    color: #333;
    line-height: 1.4;
    margin-right: 20rpx;
  }
  
  .transaction-tag {
    padding: 8rpx 16rpx;
    border-radius: 20rpx;
    font-size: 24rpx;
    white-space: nowrap;
  }
  
  .transaction-tag.cash {
    background: #e6f7ff;
    color: #1890ff;
    border: 1rpx solid #91d5ff;
  }
  
  .transaction-tag.swap {
    background: #f6ffed;
    color: #52c41a;
    border: 1rpx solid #b7eb8f;
  }
  
  .transaction-tag.both {
    background: #fff7e6;
    color: #fa8c16;
    border: 1rpx solid #ffd591;
  }
  
  .view-count {
    font-size: 24rpx;
    color: #999;
  }
  
  /* 卖家信息 */
  .seller-info {
    background: #fff;
    padding: 30rpx;
    margin-bottom: 20rpx;
  }
  
  .seller-header {
    display: flex;
    align-items: center;
  }
  
  .seller-avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    margin-right: 20rpx;
  }
  
  .seller-details {
    flex: 1;
  }
  
  .seller-name {
    font-size: 28rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 8rpx;
  }
  
  .seller-rating {
    display: flex;
    align-items: center;
  }
  
  .rating-stars {
    color: #ffb400;
    font-size: 24rpx;
    margin-right: 10rpx;
  }
  
  .rating-score {
    font-size: 24rpx;
    color: #666;
  }
  
  .seller-college {
    font-size: 24rpx;
    color: #999;
  }
  
  /* 描述和标签区域 */
  .description-section,
  .swap-section,
  .tags-section {
    background: #fff;
    padding: 30rpx;
    margin-bottom: 20rpx;
  }
  
  .section-title {
    font-size: 28rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 20rpx;
  }
  
  .goods-description,
  .expected-swap {
    font-size: 28rpx;
    color: #666;
    line-height: 1.6;
  }
  
  .tags-list {
    display: flex;
    flex-wrap: wrap;
    gap: 16rpx;
  }
  
  .tag {
    background: #f8f9fa;
    color: #666;
    padding: 12rpx 20rpx;
    border-radius: 20rpx;
    font-size: 24rpx;
  }
  
  /* 底部操作栏 */
  .action-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: #fff;
    padding: 20rpx 30rpx;
    display: flex;
    align-items: center;
    border-top: 1rpx solid #eee;
    box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.1);
  }
  
  .action-left {
    display: flex;
  }
  
  .action-right {
    flex: 1;
    display: flex;
    justify-content: flex-end;
    gap: 20rpx;
  }
  
  .action-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20rpx 40rpx;
    border-radius: 40rpx;
    font-size: 28rpx;
    font-weight: 500;
  }
  
  .chat-btn {
    background: #f8f9fa;
    color: #333;
    flex-direction: column;
    padding: 20rpx 30rpx;
  }
  
  .btn-icon {
    font-size: 32rpx;
    margin-bottom: 8rpx;
  }
  
  .btn-text {
    font-size: 24rpx;
  }
  
  .buy-btn {
    background: #ff6b35;
    color: #fff;
    min-width: 200rpx;
  }
  
  .swap-btn {
    background: #52c41a;
    color: #fff;
    min-width: 200rpx;
  }