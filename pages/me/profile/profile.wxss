  /* 商品展示模块 */
  .goods-tab {
    display: flex;
    background: var(--accent-beige);
    border-radius: 16rpx;
    padding: 8rpx;
    margin-bottom: 24rpx;
  }
  
  .tab-item {
    flex: 1;
    text-align: center;
    padding: 20rpx;
    border-radius: 12rpx;
    font-size: 28rpx;
    color: var(--neutral-dark);
    transition: all 0.3s ease;
  }
  
  .tab-item.active {
    background: var(--primary-red);
  }
  
  .goods-list {
    min-height: 400rpx;
  }
  
  .goods-item {
    display: flex;
    background: white;
    border-radius: 16rpx;
    padding: 24rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  }
  
  .goods-image {
    width: 160rpx;
    height: 160rpx;
    border-radius: 12rpx;
    margin-right: 24rpx;
  }
  
  .goods-info {
    flex: 1;
  }
  
  .goods-title {
    font-size: 30rpx;
    font-weight: bold;
    color: var(--neutral-text);
    margin-bottom: 12rpx;
  }
  
  .goods-price {
    display: flex;
    align-items: center;
    gap: 16rpx;
    margin-bottom: 12rpx;
  }
  
  .price {
    color: #dd7724;
    font-weight: bold;
    font-size: 28rpx;
  }
  
  .swap-tag {
    background: var(--accent-yellow);
    color: var(--neutral-text);
    padding: 6rpx 12rpx;
    border-radius: 8rpx;
    font-size: 22rpx;
  }
  
  .goods-desc {
    font-size: 26rpx;
    color: var(--neutral-dark);
    line-height: 1.4;
  }
  
  /* 愿望项样式 */
  .wish-item {
    display: flex;
    background: white;
    border-radius: 16rpx;
    padding: 24rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
    align-items: flex-start;
  }
  
  .wish-icon {
    font-size: 40rpx;
    margin-right: 20rpx;
    margin-top: 4rpx;
  }
  
  .wish-info {
    flex: 1;
  }
  
  .wish-title {
    font-size: 30rpx;
    font-weight: bold;
    color: var(--neutral-text);
    margin-bottom: 8rpx;
  }
  
  .wish-desc {
    font-size: 26rpx;
    color: var(--neutral-dark);
    margin-bottom: 12rpx;
    line-height: 1.4;
  }
  
  .wish-offer {
    display: flex;
    gap: 20rpx;
  }
  
  .wish-offer text {
    background: var(--primary-pink);
    color: var(--primary-red);
    padding: 8rpx 16rpx;
    border-radius: 8rpx;
    font-size: 24rpx;
  }
  
  .empty-state {
    text-align: center;
    padding: 80rpx 0;
    color: var(--neutral-gray);
  }
  
  .empty-state image {
    width: 120rpx;
    height: 120rpx;
    margin-bottom: 24rpx;
    opacity: 0.5;
  }
  .goods-section {
    margin: 20rpx;
    background: white;
    border-radius: 16rpx;
    padding: 20rpx;
  }
  
  .goods-tabs {
    display: flex;
    border-bottom: 2rpx solid #f0f0f0;
    margin-bottom: 30rpx;
  }
  
  .tab {
    flex: 1;
    text-align: center;
    padding: 25rpx 0;
    font-size: 32rpx;
    color:  #1a1818;
    font-weight: bold;
    transition: all 0.2s ease;
    position: relative;
    background: #fdf3d8; /* 未激活状态 */
  }
  
  .tab.active {
    color: #1a1818;
    font-weight: bold;
    background: #FFD262; /* 激活状态*/
  }
  
  .tab.active::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 120rpx;
    height: 4rpx;
    background: #666; /* 底部边框保持深色 */
    border-radius: 2rpx;
  }
  
  .goods-list {
    min-height: 200rpx;
  }
  
  .empty-state {
    text-align: center;
    padding: 60rpx 0;
    color: #999;
    font-size: 28rpx;
  }
  
  /* 发布商品样式 */
  .goods-item {
    display: flex;
    padding: 20rpx;
    border-bottom: 1rpx solid #f5f5f5;
  }
  
  .goods-image {
    width: 160rpx;
    height: 160rpx;
    border-radius: 12rpx;
    margin-right: 20rpx;
  }
  
  .goods-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  
  .goods-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 10rpx;
  }
  
  .goods-description {
    font-size: 26rpx;
    color: #666;
    line-height: 1.4;
    margin-bottom: 20rpx;
  }
  
  .goods-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .goods-price {
    font-size: 32rpx;
    color: #ff6b35;
    font-weight: bold;
  }
  
  .goods-type {
    font-size: 24rpx;
    color: #999;
    padding: 6rpx 12rpx;
    background: #f5f5f5;
    border-radius: 8rpx;
  }
  
  /* 愿望样式 */
  .wish-item {
    padding: 20rpx;
    border-bottom: 1rpx solid #f5f5f5;
  }
  
  .wish-content {
    display: flex;
    flex-direction: column;
  }
  
  .wish-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 10rpx;
  }
  
  .wish-description {
    font-size: 26rpx;
    color: #666;
    line-height: 1.4;
    margin-bottom: 20rpx;
  }
  
  .wish-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .wish-price {
    font-size: 28rpx;
    color: #f0f9ff;
    font-weight: bold;
  }
  
  .wish-swap {
    font-size: 24rpx;
    color: #666;
    background: #f0f9ff;
    padding: 8rpx 16rpx;
    border-radius: 8rpx;
  }

  /* 商品状态标签 */
.status-tag {
    font-size: 10px;
    padding: 2px 6px;
    border-radius: 3px;
    margin-left: 5px;
  }
  
  .status-tag.sold {
    background-color: #f0f0f0;
    color: #999;
  }
  
  .status-tag.offline {
    background-color: #ffe6e6;
    color: #f56c6c;
  }
  
  .both-tag {
    background-color: #e6f7ff;
    color: #1890ff;
    font-size: 10px;
    padding: 2px 6px;
    border-radius: 3px;
    margin-left: 5px;
  }
  
  /* 星星评分 */
  .star {
    font-size: 16px;
    margin-right: 2px;
  }
  
  .star.active {
    color: #faad14;
  }
  
  /* 空状态 */
  .empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 40px 0;
  }
  
  .empty-icon {
    width: 80px;
    height: 80px;
    margin-bottom: 16px;
    opacity: 0.6;
  }
  
  .empty-text {
    color: #999;
    font-size: 14px;
  }