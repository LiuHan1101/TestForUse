/* pages/me/profile/profile.wxss */
.profile-container {
    min-height: 100vh;
    background: #ffffff;
    padding: 20rpx;
  }
  
  /* 头部用户信息 */
  .header-section {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 30rpx;
    background: #ffffff;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  }
  
  .user-basic-info {
    display: flex;
    align-items: flex-start;
  }
  
  .user-avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    margin-right: 24rpx;
    border: 4rpx solid #181717;
  }
  
  .user-text-info {
    flex: 1;
  }
  
  .user-nickname {
    font-size: 36rpx;
    font-weight: bold;
    color: #1a1818;
    margin-bottom: 8rpx;
  }
  
  .user-college {
    font-size: 28rpx;
    color: var(--neutral-dark);
    margin-bottom: 12rpx;
  }
  
  .user-stats {
    display: flex;
    gap: 20rpx;
  }
  
  .stat-item {
    font-size: 24rpx;
    color: var(--neutral-text);
    background: #ffffff;  /*加入几天*/
    padding: 8rpx 16rpx;
    border-radius: 12rpx;
  }
  
  .message-btn {
    background: var(--primary-red);
    color: white;
    border: none;
    border-radius: 20rpx;
    padding: 16rpx 24rpx;
    font-size: 24rpx;
    min-width: 120rpx;
  }
  
  /* 评价模块 */
  .rating-section {
    margin-bottom: 30rpx;
    background: #ffffff;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  }
  
  .rating-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #1a1818;
    margin-bottom: 24rpx;
  }
  
  .rating-content {
    display: flex;
    height: 200rpx;
  }
  
  .comment-scroll {
    flex: 7;
    border-right: 2rpx solid var(--neutral-gray);
    padding-right: 24rpx;
    background: #ffffff;
  }
  
  .comment-list {
    height: 100%;
  }
  
  .comment-item {
    padding: 12rpx 0;
    border-bottom: 1rpx solid rgba(140, 123, 108, 0.1);
  }
  
  .comment-user {
    font-weight: bold;
    color: var(--neutral-dark);
    font-size: 28rpx;
    margin-right: 12rpx;
  }
  
  .comment-text {
    color: var(--neutral-dark);
    font-size: 26rpx;
  }
  
  .score-display {
    flex: 3;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding-left: 24rpx;
  }
  
  .score-number {
    font-size: 48rpx;
    font-weight: bold;
    color: #dd7724;
    line-height: 1;
  }
  
  .score-total {
    font-size: 24rpx;
    color: var(--neutral-gray);
    margin-bottom: 16rpx;
  }
  
  .rating-stars {
    margin-bottom: 12rpx;
  }
  
  .star {
    font-size: 24rpx;
    margin: 0 2rpx;
  }
  
  .rating-count {
    font-size: 22rpx;
    color: var(--neutral-gray);
  }
  
  /* 个人简介模块 */
  .bio-section {
    margin-bottom: 30rpx;
    background: #ffffff;
  }
  
  .section-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #ffffff;
    margin-bottom: 20rpx;
  }
  
  .bio-content {
    font-size: 28rpx;
    color: var(--neutral-dark);
    line-height: 1.6;
    margin-bottom: 14rpx;
    padding: 20rpx;
    background: rgb(243, 243, 243);
    border-radius: 12rpx;
  }
  
  /* 标签区域 */
  .tags-section {
    width: 100%;
  }

  .tags-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333 !important;
    margin-bottom: 50rpx;
    display: block;
  }

  /* 标签列表 - 关键修正 */
  .tags-list {
    display: flex;
    flex-wrap: wrap;
    gap: 16rpx;
  }

  /* 标签样式 - 修正宽度自适应问题 */
  .tag {
    background: #bad467;
    color: white;
    padding: 12rpx 24rpx; /* 足够的水平内边距 */
    border-radius: 40rpx;
    font-size: 26rpx;
    display: inline-flex; /* 关键修改：使用 inline-flex */
    align-items: center;
    justify-content: center;
    white-space: nowrap;
    height: 60rpx;
    line-height: 1.4;
    box-shadow: 0 2rpx 8rpx rgba(186, 212, 103, 0.2);
    /* 清除所有可能的宽度限制 */
    min-width: min-content; /* 关键属性：宽度至少能容纳内容 */
    max-width: none;
    width: auto;
    overflow: visible;
    box-sizing: border-box;
  }
