/* pages/me/profile/profile.wxss */
.profile-container {
    min-height: 100vh;
    background: var(--neutral-light);
    padding: 20rpx;
  }
  
  /* 头部用户信息 */
  .header-section {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 30rpx;
  }
  
  .user-basic-info {
    display: flex;
    align-items: flex-start;
  }
  
  .user-avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    margin-right: 24rpx;
    border: 4rpx solid var(--primary-pink);
  }
  
  .user-text-info {
    flex: 1;
  }
  
  .user-nickname {
    font-size: 36rpx;
    font-weight: bold;
    color: var(--neutral-text);
    margin-bottom: 8rpx;
  }
  
  .user-college {
    font-size: 28rpx;
    color: var(--neutral-dark);
    margin-bottom: 12rpx;
  }
  
  .user-stats {
    display: flex;
    gap: 20rpx;
  }
  
  .stat-item {
    font-size: 24rpx;
    color: var(--neutral-gray);
    background: var(--accent-beige);
    padding: 8rpx 16rpx;
    border-radius: 12rpx;
  }
  
  .message-btn {
    background: var(--primary-red);
    color: white;
    border: none;
    border-radius: 20rpx;
    padding: 16rpx 24rpx;
    font-size: 24rpx;
    min-width: 120rpx;
  }
  
  /* 评价模块 */
  .rating-section {
    margin-bottom: 30rpx;
  }
  
  .rating-title {
    font-size: 32rpx;
    font-weight: bold;
    color: var(--neutral-text);
    margin-bottom: 24rpx;
  }
  
  .rating-content {
    display: flex;
    height: 200rpx;
  }
  
  .comment-scroll {
    flex: 7;
    border-right: 2rpx solid var(--neutral-gray);
    padding-right: 24rpx;
  }
  
  .comment-list {
    height: 100%;
  }
  
  .comment-item {
    padding: 12rpx 0;
    border-bottom: 1rpx solid rgba(140, 123, 108, 0.1);
  }
  
  .comment-user {
    font-weight: bold;
    color: var(--primary-red);
    margin-right: 12rpx;
  }
  
  .comment-text {
    color: var(--neutral-dark);
    font-size: 26rpx;
  }
  
  .score-display {
    flex: 3;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding-left: 24rpx;
  }
  
  .score-number {
    font-size: 48rpx;
    font-weight: bold;
    color: var(--primary-red);
    line-height: 1;
  }
  
  .score-total {
    font-size: 24rpx;
    color: var(--neutral-gray);
    margin-bottom: 16rpx;
  }
  
  .rating-stars {
    margin-bottom: 12rpx;
  }
  
  .star {
    font-size: 24rpx;
    margin: 0 2rpx;
  }
  
  .rating-count {
    font-size: 22rpx;
    color: var(--neutral-gray);
  }
  
  /* 个人简介模块 */
  .bio-section {
    margin-bottom: 30rpx;
  }
  
  .section-title {
    font-size: 32rpx;
    font-weight: bold;
    color: var(--neutral-text);
    margin-bottom: 20rpx;
  }
  
  .bio-content {
    font-size: 28rpx;
    color: var(--neutral-dark);
    line-height: 1.6;
    margin-bottom: 24rpx;
    padding: 20rpx;
    background: rgba(255, 255, 255, 0.6);
    border-radius: 12rpx;
  }
  
  .tags-section {
    border-top: 1rpx solid rgba(232, 180, 184, 0.3);
    padding-top: 20rpx;
  }
  
  .tags-title {
    font-size: 28rpx;
    color: var(--neutral-dark);
    margin-bottom: 16rpx;
  }
  
  .tags-list {
    display: flex;
    flex-wrap: wrap;
    gap: 16rpx;
  }
  
  .tag {
    background: var(--accent-yellow);
    color: var(--neutral-text);
    padding: 12rpx 20rpx;
    border-radius: 20rpx;
    font-size: 24rpx;
  }
  
  .add-tag {
    background: var(--primary-pink);
    color: var(--primary-red);
    font-weight: bold;
  }
  
  /* 商品展示模块 */
  .goods-tab {
    display: flex;
    background: var(--accent-beige);
    border-radius: 16rpx;
    padding: 8rpx;
    margin-bottom: 24rpx;
  }
  
  .tab-item {
    flex: 1;
    text-align: center;
    padding: 20rpx;
    border-radius: 12rpx;
    font-size: 28rpx;
    color: var(--neutral-dark);
    transition: all 0.3s ease;
  }
  
  .tab-item.active {
    background: var(--primary-red);
    color: white;
  }
  
  .goods-list {
    min-height: 400rpx;
  }
  
  .goods-item {
    display: flex;
    background: white;
    border-radius: 16rpx;
    padding: 24rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 4rpx 16rpx rgba(140, 123, 108, 0.08);
  }
  
  .goods-image {
    width: 160rpx;
    height: 160rpx;
    border-radius: 12rpx;
    margin-right: 24rpx;
  }
  
  .goods-info {
    flex: 1;
  }
  
  .goods-title {
    font-size: 30rpx;
    font-weight: bold;
    color: var(--neutral-text);
    margin-bottom: 12rpx;
  }
  
  .goods-price {
    display: flex;
    align-items: center;
    gap: 16rpx;
    margin-bottom: 12rpx;
  }
  
  .price {
    color: var(--primary-red);
    font-weight: bold;
    font-size: 28rpx;
  }
  
  .swap-tag {
    background: var(--accent-yellow);
    color: var(--neutral-text);
    padding: 6rpx 12rpx;
    border-radius: 8rpx;
    font-size: 22rpx;
  }
  
  .goods-desc {
    font-size: 26rpx;
    color: var(--neutral-dark);
    line-height: 1.4;
  }
  
  /* 愿望项样式 */
  .wish-item {
    display: flex;
    background: white;
    border-radius: 16rpx;
    padding: 24rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 4rpx 16rpx rgba(140, 123, 108, 0.08);
    align-items: flex-start;
  }
  
  .wish-icon {
    font-size: 40rpx;
    margin-right: 20rpx;
    margin-top: 4rpx;
  }
  
  .wish-info {
    flex: 1;
  }
  
  .wish-title {
    font-size: 30rpx;
    font-weight: bold;
    color: var(--neutral-text);
    margin-bottom: 8rpx;
  }
  
  .wish-desc {
    font-size: 26rpx;
    color: var(--neutral-dark);
    margin-bottom: 12rpx;
    line-height: 1.4;
  }
  
  .wish-offer {
    display: flex;
    gap: 20rpx;
  }
  
  .wish-offer text {
    background: var(--primary-pink);
    color: var(--primary-red);
    padding: 8rpx 16rpx;
    border-radius: 8rpx;
    font-size: 24rpx;
  }
  
  .empty-state {
    text-align: center;
    padding: 80rpx 0;
    color: var(--neutral-gray);
  }
  
  .empty-state image {
    width: 120rpx;
    height: 120rpx;
    margin-bottom: 24rpx;
    opacity: 0.5;
  }
  .goods-section {
    margin: 20rpx;
    background: white;
    border-radius: 16rpx;
    padding: 20rpx;
  }
  
  .goods-tabs {
    display: flex;
    border-bottom: 2rpx solid #f0f0f0;
    margin-bottom: 30rpx;
  }
  
  .tab {
    flex: 1;
    text-align: center;
    padding: 20rpx 0;
    font-size: 32rpx;
    color: #666;
    position: relative;
  }
  
  .tab.active {
    color: #f0f9ff;
    font-weight: bold;
  }
  
  .tab.active::after {
    content: '';
    position: absolute;
    bottom: -2rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 80rpx;
    height: 4rpx;
    background: #f0f9ff;
    border-radius: 2rpx;
  }
  
  .goods-list {
    min-height: 200rpx;
  }
  
  .empty-state {
    text-align: center;
    padding: 60rpx 0;
    color: #999;
    font-size: 28rpx;
  }
  
  /* 发布商品样式 */
  .goods-item {
    display: flex;
    padding: 20rpx;
    border-bottom: 1rpx solid #f5f5f5;
  }
  
  .goods-image {
    width: 160rpx;
    height: 160rpx;
    border-radius: 12rpx;
    margin-right: 20rpx;
  }
  
  .goods-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  
  .goods-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 10rpx;
  }
  
  .goods-description {
    font-size: 26rpx;
    color: #666;
    line-height: 1.4;
    margin-bottom: 20rpx;
  }
  
  .goods-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .goods-price {
    font-size: 32rpx;
    color: #ff6b35;
    font-weight: bold;
  }
  
  .goods-type {
    font-size: 24rpx;
    color: #999;
    padding: 6rpx 12rpx;
    background: #f5f5f5;
    border-radius: 8rpx;
  }
  
  /* 愿望样式 */
  .wish-item {
    padding: 20rpx;
    border-bottom: 1rpx solid #f5f5f5;
  }
  
  .wish-content {
    display: flex;
    flex-direction: column;
  }
  
  .wish-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 10rpx;
  }
  
  .wish-description {
    font-size: 26rpx;
    color: #666;
    line-height: 1.4;
    margin-bottom: 20rpx;
  }
  
  .wish-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .wish-price {
    font-size: 28rpx;
    color: #f0f9ff;
    font-weight: bold;
  }
  
  .wish-swap {
    font-size: 24rpx;
    color: #666;
    background: #f0f9ff;
    padding: 8rpx 16rpx;
    border-radius: 8rpx;
  }