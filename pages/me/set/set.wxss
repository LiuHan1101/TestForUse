/* pages/me/set/set.wxss *//* pages/me/settings/settings.wxss */
.settings-container {
    min-height: 100vh;
    background-color: #f5f5f5;
    padding-bottom: 40rpx;
  }
  
  /* 用户信息卡片 */
  .user-card {
    display: flex;
    align-items: center;
    padding: 40rpx 32rpx;
    background: white;
    margin-bottom: 20rpx;
  }
  
  .user-avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    margin-right: 24rpx;
  }
  
  .user-info {
    display: flex;
    flex-direction: column;
  }
  
  .user-nickname {
    font-size: 36rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 8rpx;
  }
  
  .user-college {
    font-size: 28rpx;
    color: #666;
  }
  
  /* 设置列表 */
  .settings-list {
    background: white;
    border-radius: 16rpx;
    margin: 0 32rpx 20rpx;
    overflow: hidden;
  }
  
  .setting-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 32rpx;
    border-bottom: 1rpx solid #f0f0f0;
  }
  
  .setting-item:last-child {
    border-bottom: none;
  }
  
  .setting-left {
    display: flex;
    align-items: center;
    flex: 1;
  }
  
  .setting-icon {
    font-size: 40rpx;
    margin-right: 24rpx;
    width: 60rpx;
    text-align: center;
  }
  
  .setting-content {
    display: flex;
    flex-direction: column;
    flex: 1;
  }
  
  .setting-title {
    font-size: 32rpx;
    color: #333;
    margin-bottom: 8rpx;
  }
  
  .setting-desc {
    font-size: 26rpx;
    color: #999;
  }
  
  .setting-right {
    display: flex;
    align-items: center;
  }
  
  .setting-arrow {
    font-size: 36rpx;
    color: #ccc;
    margin-left: 16rpx;
  }
  
  /* 功能操作 */
  .action-list {
    background: white;
    border-radius: 16rpx;
    margin: 0 32rpx 40rpx;
    overflow: hidden;
  }
  
  .action-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 32rpx;
    border-bottom: 1rpx solid #f0f0f0;
    position: relative;
  }
  
  .action-item:last-child {
    border-bottom: none;
  }
  
  .action-text {
    font-size: 32rpx;
    color: #333;
  }
  
  .logout-text {
    color: #ff6b6b;
    text-align: center;
    width: 100%;
  }
  
  .action-desc {
    font-size: 28rpx;
    color: #999;
    margin-right: 16rpx;
  }
  
  .action-arrow {
    font-size: 36rpx;
    color: #ccc;
  }
  
  /* 版本信息 */
  .version-info {
    text-align: center;
    margin-top: 40rpx;
  }
  
  .version-text {
    font-size: 26rpx;
    color: #999;
  }