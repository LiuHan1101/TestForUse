/* pages/me/help-feedback/help-feedback.wxss */
.help-container {
  min-height: 100vh;
  background-color: #ffffff;
  padding: 0 32rpx 40rpx;
}

/* 页面标题 */
.page-header {
  padding: 40rpx 0 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 30rpx;
}

.page-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.page-desc {
  font-size: 28rpx;
  color: #666;
}

/* 帮助列表 */
.help-list {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.help-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.help-item:last-child {
  border-bottom: none;
}

.help-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.help-icon {
  width: 60rpx; 
  height: 60rpx;
  margin-right: 30rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.help-icon.small {
  width: 36rpx;
  height: 36rpx;
}

.help-icon.large {
  width: 44rpx;
  height: 44rpx;
}

.help-icon image {
  width: 100%;
  height: 100%;
  display: block;
}

.help-content {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.help-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.help-desc {
  font-size: 26rpx;
  color: #999;
}

.help-right {
  display: flex;
  align-items: center;
}

.help-arrow {
  font-size: 36rpx;
  color: #ccc;
  margin-left: 16rpx;
}

/* 联系信息 */
.contact-info {
  background: #f9f9f9;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
}

.contact-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 24rpx;
}

.contact-items {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.contact-item {
  display: flex;
  align-items: center;
}

.contact-label {
  font-size: 28rpx;
  color: #666;
  width: 160rpx;
}

.contact-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 版本信息 */
.version-info {
  text-align: center;
  margin-top: 40rpx;
}

.version-text {
  font-size: 26rpx;
  color: #999;
}