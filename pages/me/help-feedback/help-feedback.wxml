<!-- pages/me/help-feedback/help-feedback.wxml -->
<view class="help-container">
  <!-- 页面标题 -->
  <view class="page-header">
    <view class="page-title">帮助与反馈</view>
    <view class="page-desc">有问题？在这里找到答案</view>
  </view>

  <!-- 帮助列表 -->
  <view class="help-list">
    <block wx:for="{{helpItems}}" wx:key="index">
      <view class="help-item" bindtap="onHelpItemTap" data-index="{{index}}">
        <view class="help-left">
          <image class="help-icon" src="{{item.icon}}"></image>
          <view class="help-content">
            <text class="help-title">{{item.title}}</text>
            <text class="help-desc">{{item.desc}}</text>
          </view>
        </view>
        <view class="help-right">
          <text class="help-arrow">›</text>
        </view>
      </view>
    </block>
  </view>

  <!-- 联系信息 -->
  <view class="contact-info">
    <view class="contact-title">更多联系方式</view>
    <view class="contact-items">
      <view class="contact-item">
        <text class="contact-label">客服微信：</text>
        <text class="contact-value">shangcai-service</text>
      </view>
      <view class="contact-item">
        <text class="contact-label">工作时间：</text>
        <text class="contact-value">周一至周五 9:00-18:00</text>
      </view>
      <view class="contact-item">
        <text class="contact-label">邮箱：</text>
        <text class="contact-value">service@shangcai.com</text>
      </view>
    </view>
  </view>

  <!-- 版本信息 -->
  <view class="version-info">
    <text class="version-text">上财易物 v1.0.0</text>
  </view>
</view>