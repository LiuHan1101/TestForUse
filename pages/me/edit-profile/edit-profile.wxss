/* 输入框 */
.form-input {
  flex: 1;
  text-align: right;
  font-size: 32rpx;
  color: #333;
  padding: 20rpx 0;
  min-height: 48rpx;
}

.form-input::placeholder {
  color: #999;
}

/* 选择器 */
.form-picker {
  flex: 1;
  text-align: right;
}

.picker-value {
  font-size: 32rpx;
  color: #333;
  padding: 20rpx 0;
  min-height: 48rpx;
  display: block;
}

.picker-value:empty::after {
  content: '请选择';
  color: #999;
}

/* 个人简介区域 */
.textarea-container {
  flex: 1;
  position: relative;
}

.form-textarea {
  width: 100%;
  height: 160rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 1rpx solid #e0e0e0;
  box-sizing: border-box;
}

.form-textarea::placeholder {
  color: #999;
}

.word-count {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  font-size: 24rpx;
  color: #999;
  background: transparent;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  padding: 0 20rpx;
}

.btn-cancel, .btn-save {
  flex: 1;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.btn-cancel {
  background: #f8f9fa;
  color: #666;
  border: 1rpx solid #e0e0e0;
}

.btn-cancel:active {
  background: #f5f5f5;
}

.btn-save {
  background: #bad467;
  color: white;
  border: none;
}

.btn-save:disabled {
  background: #b2bec3;
  color: rgba(255, 255, 255, 0.7);
}

.btn-save:active:not(:disabled) {
  background: #def593;
  transform: translateY(1rpx);
}

/* 加载状态 */
.loading-spinner {
  width: 36rpx;
  height: 36rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  border-top-color: white;
  animation: spin 1s linear infinite;
  margin-right: 12rpx;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .form-label {
    min-width: 140rpx;
    font-size: 30rpx;
  }
  
  .avatar-preview {
    width: 100rpx;
    height: 100rpx;
  }
  
  .action-buttons {
    padding: 0 10rpx;
  }
}

/* ===== 头像预览/更换弹窗样式 ===== */

/* 弹窗容器 */
.avatar-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

/* 半透明遮罩层 */
.modal-mask {
  position: absolute;
  top: 0;
  left: 0rpx;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  animation: fadeIn 0.3s ease;
}

/* 弹窗内容区 */
.modal-content {
  position: relative;
  width: 100%;
  background: white;
  border-radius: 32rpx 32rpx 0 0;
  padding: 60rpx 40rpx 40rpx;
  box-sizing: border-box;
  z-index: 1001;
  animation: slideUp 0.3s ease;
  box-shadow: 0 -4rpx 30rpx rgba(0, 0, 0, 0.1);
}

/* 当前头像预览区 */
.modal-avatar-section {
  text-align: center;
  margin-bottom: 40rpx;
}

.modal-avatar {
  width: 300rpx;
  height: 300rpx;
  border-radius: 20rpx; /* 方形圆角 */
  border: 8rpx solid #f8f9fa;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.1);
}

/* 操作按钮区域 */
.modal-actions {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.modal-btn-change,
.modal-btn-cancel {
  height: 96rpx;
  border-radius: 16rpx;
  font-size: 34rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.modal-btn-change {
  background: #bad467;
  color: white;
  border: none;
}

.modal-btn-change:active {
  background: #def593;
  transform: translateY(1rpx);
}

.modal-btn-cancel {
  background: #f8f9fa;
  color: #666;
  border: 1rpx solid #e0e0e0;
}

.modal-btn-cancel:active {
  background: #f0f0f0;
}

/* 弹窗动画 */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .modal-content {
    padding: 50rpx 30rpx 30rpx;
  }
  
  .modal-avatar {
    width: 200rpx;
    height: 200rpx;
  }
}

/* ===== 个人标签编辑样式 ===== */

.tags-edit-section {
  flex: 1;
}

.tags-list-edit {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.tag-edit-item {
  display: flex;
  align-items: center;
  background: #bad467; /* 与个人主页相同颜色 */
  color: white;
  padding: 8rpx 16rpx 8rpx 20rpx;
  border-radius: 40rpx;
  font-size: 24rpx;
  transition: all 0.2s ease;
  height: 50rpx;
  line-height: 50rpx;
}

.tag-edit-item:active {
  opacity: 0.8;
  transform: scale(0.95);
}

.tag-text {
  margin-right: 8rpx;
}

.tag-remove {
  width: 24rpx;
  height: 24rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
  cursor: pointer;
}

.tag-remove:active {
  background: rgba(255, 255, 255, 0.3);
}

.tag-input-container {
  margin-top: 16rpx;
}

.tag-input {
  width: 100%;
  height: 60rpx;
  padding: 0 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 26rpx;
  background: #f8f9fa;
  box-sizing: border-box;
  margin-bottom: 8rpx;
}

.tag-input::placeholder {
  color: #999;
}

.tag-hint {
  font-size: 22rpx;
  color: #999;
  display: block;
  text-align: center;
}