/* pages/me/edit-profile.wxss */
.edit-profile-page {
    background: #f6f6f6;
    min-height: 100vh;
  }
  
  .header {
    background: #E8B4B8;
    padding: 40rpx;
    text-align: center;
  }
  
  .title {
    color: white;
    font-size: 36rpx;
    font-weight: bold;
  }
  
  .form-container {
    padding: 30rpx;
  }
  
  .form-item {
    background: white;
    border-radius: 16rpx;
    padding: 30rpx;
    margin-bottom: 20rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  .label {
    font-size: 32rpx;
    color: #333;
    font-weight: 600;
    min-width: 120rpx;
  }
  
  .avatar-section {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    border: 2rpx solid #E8B4B8;
  }
  
  .avatar-hint {
    font-size: 24rpx;
    color: #999;
    margin-top: 10rpx;
  }
  
  .input {
    flex: 1;
    text-align: right;
    font-size: 32rpx;
    color: #333;
  }
  
  .picker {
    flex: 1;
  }
  
  .picker-view {
    text-align: right;
    font-size: 32rpx;
    color: #999;
    padding: 20rpx 0;
  }
  
  .picker-view.has-value {
    color: #333;
  }
  
  .button-group {
    margin-top: 60rpx;
  }
  
  .btn {
    width: 100%;
    height: 90rpx;
    border-radius: 16rpx;
    font-size: 32rpx;
    font-weight: 600;
    margin-bottom: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .save-btn {
    background: #E8B4B8;
    color: white;
  }
  
  .save-btn:disabled {
    background: #cccccc;
  }
  
  .cancel-btn {
    background: transparent;
    color: #666;
    border: 2rpx solid #ddd;
  }