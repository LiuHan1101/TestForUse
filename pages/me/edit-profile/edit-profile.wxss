/* pages/me/edit-profile/edit-profile.wxss */

.edit-profile-container {
  min-height: 100vh;
  background: #ffffff;
  padding: 20rpx;
}

/* 表单容器 */
.form-container {
  background: white;
  border-radius: 20rpx;
  padding: 0 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 表单项 */
.form-item {
  display: flex;
  align-items: center;
  padding: 40rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  min-width: 160rpx;
}

/* 头像区域 */
.avatar-section {
  display: flex;
  align-items: center;
  flex: 1;
}

.avatar-preview {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #f0f0f0;
  margin-right: 30rpx;
  background: #ffffff;
  cursor: pointer;
}

.avatar-preview:active {
  opacity: 0.8;
  transform: scale(0.98);
  transition: all 0.1s ease;
}

