.container {
    min-height: 100vh;
    background-color: #f7f7f7;
  }
  
  .stats-header {
    background: white;
    padding: 30rpx 40rpx;
    border-bottom: 1rpx solid #f0f0f0;
  }
  
  .stat-item {
    display: flex;
    align-items: center;
  }
  
  .stat-number {
    font-size: 36rpx;
    font-weight: bold;
    color: #ff6b35;
    margin-right: 16rpx;
  }
  
  .stat-label {
    font-size: 28rpx;
    color: #666;
  }
  
  .goods-list {
    padding: 20rpx;
  }
  
  .goods-item {
    display: flex;
    background: white;
    border-radius: 20rpx;
    margin-bottom: 24rpx;
    padding: 30rpx;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
    transition: all 0.3s ease;
  }
  
  .goods-item:active {
    transform: scale(0.98);
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  }
  
  .goods-image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 16rpx;
    margin-right: 30rpx;
    flex-shrink: 0;
    background-color: #f5f5f5;
  }
  
  .goods-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-height: 200rpx;
  }
  
  .goods-title {
    font-size: 32rpx;
    font-weight: 600;
    color: #333;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    margin-bottom: 12rpx;
  }
  
  .goods-desc {
    font-size: 26rpx;
    color: #999;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    margin-bottom: 16rpx;
  }
  
  .goods-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
  }
  
  .goods-category {
    font-size: 24rpx;
    color: #ff6b35;
    background: #fff0e8;
    padding: 6rpx 16rpx;
    border-radius: 20rpx;
  }
  
  .goods-time {
    font-size: 22rpx;
    color: #ccc;
  }
  
  .goods-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12rpx;
  }
  
  .price-section {
    flex: 1;
  }
  
  .goods-price {
    font-size: 36rpx;
    font-weight: 700;
    color: #ff6b35;
  }
  
  .stats-section {
    display: flex;
    gap: 20rpx;
  }
  
  .view-count, .like-count {
    font-size: 22rpx;
    color: #999;
  }
  
  .goods-status {
    align-self: flex-start;
  }
  
  .status-tag {
    font-size: 22rpx;
    padding: 8rpx 20rpx;
    border-radius: 20rpx;
    font-weight: 500;
  }
  
  .status-tag.on-sale {
    background-color: #e8f5e8;
    color: #52c41a;
  }
  
  .status-tag.sold-out {
    background-color: #f5f5f5;
    color: #999;
  }
  
  .empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 200rpx 60rpx;
    text-align: center;
  }
  
  .empty-image {
    width: 240rpx;
    height: 240rpx;
    margin-bottom: 40rpx;
    opacity: 0.6;
  }
  
  .empty-text {
    font-size: 32rpx;
    color: #999;
    margin-bottom: 16rpx;
    font-weight: 500;
  }
  
  .empty-subtext {
    font-size: 26rpx;
    color: #ccc;
    margin-bottom: 60rpx;
  }
  
  .publish-btn {
    background: linear-gradient(135deg, #ff6b35, #ff8c42);
    color: white;
    border: none;
    border-radius: 50rpx;
    padding: 0 80rpx;
    font-size: 30rpx;
    height: 80rpx;
    line-height: 80rpx;
    font-weight: 500;
  }
  
  .loading-state {
    text-align: center;
    padding: 60rpx;
    color: #999;
  }
  
  .loading-text {
    font-size: 28rpx;
  }
  
  .load-more {
    text-align: center;
    padding: 40rpx;
    font-size: 26rpx;
    color: #999;
  }