.container {
  width: 100%;
  height: 100vh;
  background-color: #ffffff;
}

/* 搜索栏 */
.search-bar {
  margin-bottom: 30rpx;
  width: 100%;
}

.search-input {
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-placeholder {
  color: #999;
  font-size: 28rpx;
}

/* 商品列表 */
.goods-list {
  height: calc(100vh - 66px);
}

.goods-container {
  padding: 0 3px;
}

/* 商品项容器 - 调整为与主页相同的高度 */
.goods-item-container {
  display: flex;
  background-color: #fff;
  border-radius: 8px;
  margin-top: 10px;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  height: 250rpx; /* 与主页相同的高度 */
}

/* 商品内容区域 - 调整为与主页相同的布局 */
.goods-item-content {
  flex: 9.0;
  padding: 24rpx;
  display: flex;
}

.goods-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
  object-fit: cover;
}

/* 商品信息 - 使用与主页相同的布局 */
.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-height: 100%; /* 确保info区域占满高度 */
}

/* 商品头部（标题和价格） */
.goods-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.goods-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.goods-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #e46225; 
  flex-shrink: 0;
  text-align: right;
  min-height: 40rpx;
}

/* 商品元信息（描述和时间） */
.goods-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.goods-description {
  font-size: 26rpx;
  color: #666;
  flex: 1;
  margin-right: 20rpx;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1; /* 描述限制为一行 */
  overflow: hidden;
  text-overflow: ellipsis;
}

.goods-time {
  font-size: 24rpx;
  color: #999;
}

/* 商品底部（标签和交易类型） */
.goods-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto; /* 将整个底部区域推到容器底部 */
  padding-top: 8rpx; /* 添加一点上边距 */
}

.goods-tags {
  flex: 1; /* 让标签区域占据可用空间 */
  margin-bottom: 0; /* 移除底部边距 */
}

.goods-tag {
  font-size: 24rpx;
  color: #ffffff;
  background: #bad476; /* 指定颜色 - 绿色标签 */
  padding: 8rpx 24rpx; /* 宽度比文字稍大 */
  border-radius: 20rpx;
  display: inline-block;
  margin-right: 12rpx;
  margin-bottom: 0; /* 移除底部边距 */
}

/* 交易类型 - 灰色样式（与主页相同） */
.goods-type {
  font-size: 24rpx;
  color: #999;
  padding: 6rpx 16rpx;
  background: #f5f5f5;
  border-radius: 6rpx;
  flex-shrink: 0; /* 防止被压缩 */
}

/* 操作按钮区域 - 保持不变 */
.action-buttons-container {
  flex: 1.2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 1px solid #eee;
  padding: 15px 0;
}

.action-icon {
  width: 22px;
  height: 22px;
  margin: 6px 0;
  opacity: 1; /*图标透明度*/
  transition: opacity 0.2s ease;
  pointer-events: auto; /* 确保可以点击 */
}

.action-icon:active {
  opacity: 0.5; /* 点击时明显变淡，确认点击生效 */
  transform: scale(0.9);
}

/* 编辑图标和删除图标 */
.edit-icon {
  width: 23px;
  height: 23px;
}

.delete-icon {
  width: 28px;
  height: 28px;
}

/* 已发布页面 */
.published-page .edit-icon {
  margin-bottom: 20px; 
}

/* 其他页面 */
.other-page .delete-icon {
  /* 没有上下边距，保持居中 */
  margin-top: 0;
  margin-bottom: 0;
}

.published-page .delete-icon {
  margin-top: 20px; 
}

/* 空状态 */
.empty-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200px;
}

.empty-text {
  color: #999;
  font-size: 16px;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20px;
}

.loading-text {
  color: #999;
  font-size: 14px;
}