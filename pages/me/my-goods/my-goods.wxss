.container {
    min-height: 100vh;
    background-color: #f8f9fa;
  }
  
  /* 搜索栏样式 */
  .search-bar {
    padding: 20rpx;
    background: white;
    border-bottom: 1rpx solid #eee;
  }
  
  .search-input {
    display: flex;
    align-items: center;
    padding: 20rpx;
    background: #f5f5f5;
    border-radius: 50rpx;
    color: #999;
  }
  
  .search-icon {
    margin-right: 10rpx;
  }
  
  /* 商品列表样式 */
  .goods-list {
    height: calc(100vh - 120rpx);
  }
  
  .goods-container {
    padding: 20rpx;
  }
  
  /* 可滑动区域 */
  .movable-area {
    width: 100%;
    height: 240rpx;
    margin-bottom: 20rpx;
    border-radius: 16rpx;
    overflow: hidden;
  }
  
  .movable-view {
    width: 200%;
    height: 100%;
    display: flex;
  }
  
  /* 商品项样式 */
  .goods-item {
    width: 50%;
    height: 100%;
    display: flex;
    padding: 20rpx;
    background: white;
    border-radius: 16rpx;
    box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
  }
  
  .goods-image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 12rpx;
    margin-right: 20rpx;
  }
  
  .goods-info {
    flex: 1;
    display: flex;
    flex-direction: column;
  }
  
  .goods-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 8rpx;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .goods-description {
    font-size: 26rpx;
    color: #666;
    margin-bottom: 12rpx;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .goods-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12rpx;
  }
  
  .goods-price {
    font-size: 32rpx;
    color: #e8b4b8;
    font-weight: bold;
  }
  
  .goods-time {
    font-size: 24rpx;
    color: #999;
  }
  
  .goods-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8rpx;
  }
  
  .goods-tag {
    padding: 4rpx 12rpx;
    background: #f0f0f0;
    border-radius: 20rpx;
    font-size: 20rpx;
    color: #666;
  }
  
  /* 操作按钮样式 */
  .action-buttons {
    width: 50%;
    height: 100%;
    display: flex;
  }
  
  .action-btn {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 28rpx;
  }
  
  .edit-btn {
    background: #e8b4b8;
  }
  
  .delete-btn {
    background: #ff6b6b;
  }
  
  /* 空状态和加载状态 */
  .empty-state, .loading-state {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 200rpx;
  }
  
  .empty-text, .loading-text {
    font-size: 28rpx;
    color: #999;
  }