/* pages/me/credit-center/credit-center.wxss */
.credit-container {
    background: #ffffff !important; 
    min-height: 100vh;
    padding: 20rpx;
  }
  
  /* 顶部圆形分数 */
  .score-section {
    display: flex;
    align-items: center;
    background: white;
    border-radius: 20rpx;
    padding: 40rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  }
  
  .score-circle {
    width: 160rpx;
    height: 160rpx;
    border: 8rpx solid #07C160;
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-right: 40rpx;
  }
  
  .score-number {
    font-size: 48rpx;
    font-weight: bold;
    color: #333;
  }
  
  .score-label {
    font-size: 24rpx;
    color: #666;
    margin-top: 8rpx;
  }
  
  .score-info {
    flex: 1;
  }
  
  .score-level {
    font-size: 36rpx;
    font-weight: bold;
    display: block;
    margin-bottom: 12rpx;
  }
  
  .score-desc {
    font-size: 28rpx;
    color: #666;
  }
  
  /* 评分维度 */
  .dimension-section {
    background: white;
    border-radius: 20rpx;
    padding: 30rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  }
  
  .section-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 30rpx;
    padding-bottom: 20rpx;
    border-bottom: 2rpx solid #f0f0f0;
  }
  
  .dimension-item {
    margin-bottom: 40rpx;
  }
  
  .dimension-item:last-child {
    margin-bottom: 0;
  }
  
  .dimension-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12rpx;
  }
  
  .dimension-name {
    font-size: 28rpx;
    color: #333;
    font-weight: 500;
  }
  
  .dimension-score {
    font-size: 28rpx;
    color: #FF6B00;
    font-weight: bold;
  }
  
  .dimension-desc {
    font-size: 24rpx;
    color: #999;
    margin-bottom: 16rpx;
    display: block;
  }
  
  .stars-container {
    display: flex;
    align-items: center;
  }
  
  .stars-container.small {
    margin-left: 10rpx;
  }
  
  .star-icon {
    font-size: 32rpx;
    margin-right: 8rpx;
    color: #E0E0E0;
  }
  
  .star-icon.full {
    color: #FFB400;
  }
  
  .star-icon.half {
    color: #FFB400;
    opacity: 0.7;
  }
  
  .star-icon.small {
    font-size: 24rpx;
    margin-right: 4rpx;
  }
  
  .score-text {
    font-size: 24rpx;
    color: #999;
    margin-left: 20rpx;
  }
  
  /* 评价记录 */
  .rating-section {
    background: white;
    border-radius: 20rpx;
    padding: 30rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  }
  
  .rating-item {
    padding: 30rpx 0;
    border-bottom: 2rpx solid #f8f8f8;
  }
  
  .rating-item:last-child {
    border-bottom: none;
  }
  
  .rating-header {
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
  }
  
  .user-avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    margin-right: 20rpx;
  }
  
  .user-info {
    flex: 1;
  }
  
  .username {
    font-size: 28rpx;
    color: #333;
    font-weight: 500;
    display: block;
    margin-bottom: 8rpx;
  }
  
  .transaction-info {
    font-size: 24rpx;
    color: #999;
  }
  
  .rating-time {
    font-size: 24rpx;
    color: #999;
  }
  
  .overall-rating {
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
  }
  
  .rating-label {
    font-size: 26rpx;
    color: #333;
    margin-right: 20rpx;
  }
  
  .rating-score {
    font-size: 28rpx;
    color: #FF6B00;
    font-weight: bold;
    margin-left: 20rpx;
  }
  
  .detail-ratings {
    display: flex;
    flex-direction: column;
    gap: 12rpx;
    margin-bottom: 20rpx;
    padding: 20rpx;
    background: #f8f8f8;
    border-radius: 12rpx;
  }
  
  .detail-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  .detail-label {
    font-size: 24rpx;
    color: #666;
  }
  
  .rating-comment {
    background: #f8f8f8;
    padding: 24rpx;
    border-radius: 12rpx;
  }
  
  .comment-text {
    font-size: 26rpx;
    color: #333;
    line-height: 1.5;
  }
  
  /* 空状态 */
  .empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 100rpx 0;
    text-align: center;
  }
  
  .empty-icon {
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 40rpx;
    opacity: 0.5;
  }
  
  .empty-text {
    font-size: 32rpx;
    color: #999;
    margin-bottom: 16rpx;
  }
  
  .empty-desc {
    font-size: 26rpx;
    color: #ccc;
  }