/* pages/publish/publish.wxss */


.publish-page {
  background: white;
  min-height: 100vh;
}

/* 顶部导航栏下方的分割线 */
.publish-page::after {
  content: '';
  position: fixed;
  top: var(--status-bar-height, 0);
  left: 0;
  right: 0;
  height: calc(88rpx + var(--status-bar-height, 0));
  background: #ffffff;
  z-index: 999;
  border-bottom: 1rpx solid #e0e0e0;
}

/* 表单内容 */
.publish-content {
  padding: 30rpx;
  margin-top: calc(88rpx + var(--status-bar-height, 0));
}

/* 表单组 */
.form-group {
  margin-bottom: 50rpx;
  position: relative;
}

/* 所有标题加粗 */
.form-label {
  font-size: 32rpx;
  color: #2c3e50;
  margin-bottom: 20rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
}

/* 标题前面的装饰线 */
.form-label::before {
  content: '';
  width: 6rpx;
  height: 28rpx;
  background: #ffd262;
  border-radius: 3rpx;
  margin-right: 12rpx;
}

.label-hint {
  font-size: 26rpx;
  color: #999999;
  margin-left: 10rpx;
  font-weight: normal;
}

/* 输入框样式 */
.form-input {
  width: 100%;
  height: 80rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
  border: 1rpx solid #e0e0e0;
  transition: all 0.2s ease;
}

.form-input:focus {
  border-color: #bad467;
  background: white;
  box-shadow: 0 0 0 2rpx rgba(186, 212, 103, 0.1);
}

.form-textarea {
  width: 100%;
  height: 200rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
  border: 1rpx solid #e0e0e0;
  line-height: 1.6;
  transition: all 0.2s ease;
}

.form-textarea:focus {
  border-color: #bad467;
  background: white;
  box-shadow: 0 0 0 2rpx rgba(186, 212, 103, 0.1);
}

.char-count {
  text-align: right;
  font-size: 26rpx;
  color: #999999;
  margin-top: 10rpx;
}

/* 图片上传容器 */
.image-upload-container {
  position: relative;
}

.image-upload {
  border: 2rpx dashed #cccccc;
  border-radius: 12rpx;
  padding: 50rpx 20rpx;
  text-align: center;
  background: #fafafa;
  transition: all 0.3s ease;
}

.image-upload.active {
  border-color: #bad467;
  background: #f8fff8;
  padding: 40rpx 20rpx;
}

.upload-icon {
  font-size: 60rpx;
  color: #666666;
  margin-bottom: 20rpx;
}

.image-upload.active .upload-icon {
  color: #bad467;
}

.upload-text {
  color: #333333;
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.upload-hint {
  color: #999999;
  font-size: 26rpx;
  margin-bottom: 15rpx;
}

.upload-options {
  margin-top: 20rpx;
}

.option-text {
  font-size: 24rpx;
  color: #bad467;
  background: rgba(186, 212, 103, 0.1);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

/* 图片预览 */
.image-preview {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 30rpx;
}

.preview-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.2s ease;
}

.preview-item:active {
  transform: scale(0.95);
}

.preview-image {
  width: 100%;
  height: 100%;
  background: #f0f0f0;
}

.image-order {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  background: rgba(0, 0, 0, 0.5);
  color: white;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  font-weight: bold;
}

.delete-image {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 36rpx;
  height: 36rpx;
  background: #dd7724;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

/* 已选标签显示区域*/
.selected-tags {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid #e0e0e0;
  display: block !important; 
}

.selected-tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.selected-tag-item {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background: #ffffff;
  border: 1rpx solid;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #ffffff; 
  font-weight: 500;
}

.selected-tag-text {
  color: #000000; 
  margin-right: 10rpx;
  font-weight: 500;
}

.selected-tag-remove {
  color: #666666 !important; 
  font-size: 32rpx;
  line-height: 1;
  cursor: pointer;
  padding: 0 4rpx;
  opacity: 0.7;
  transition: opacity 0.2s;
}

.selected-tag-remove:active {
  opacity: 1;
}

/* 空状态提示 */
.empty-tags-hint {
  text-align: center;
  color: #cccccc;
  padding: 20rpx;
  font-size: 26rpx;
}

/* 选择数量提示 */
.selection-hint {
  font-size: 26rpx;
  color: #999999;
  margin-top: 10rpx;
  font-weight: normal;
}

/* 分类网格 */
.category-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

/* 自定义标签添加按钮  */
.category-item.custom-tag-add {
  padding: 20rpx 24rpx !important;
  background: #ffffff !important;
  border: 1rpx dashed #cccccc !important;
  border-radius: 12rpx;
  color: #666666 !important;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  min-width: calc(33.333% - 14rpx);
  flex: 1;
  box-sizing: border-box;
  font-weight: 600 !important;
  text-align: center;
}

.category-item.custom-tag-add:active {
  background: #fafafa !important;
  border-color: #ffd262 !important;
}

.category-item.custom-tag-add .category-icon {
  color: #666666;
  font-weight: bold;
  margin-right: 8rpx;
}


.transaction-type {
  display: flex;
  gap: 15rpx;
}

.type-option {
  flex: 1;
  text-align: center;
  padding: 25rpx 15rpx;
  background: #f8f8f8;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  color: #333333;
  transition: all 0.2s ease;
  min-height: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.type-option:active {
  transform: scale(0.98);
}

.type-option.active {
  background: #ffd262;
  border-color: #ffd262;
  color: #333333;
  font-weight: 600;
}

.type-label {
  font-size: 26rpx;
  font-weight: 600;
}


.switch-type {
  display: flex;
  gap: 20rpx; 
}

.switch-type .type-option {
  padding: 30rpx 20rpx; 
  min-height: auto; 
}

.switch-type .type-option.active {
  background: #ffd262;
  border-color: #ffd262;
  color: #333333;
  font-weight: 600;
}

/* 价格输入 */
.price-input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
}

.price-symbol {
  position: absolute;
  left: 30rpx;
  font-size: 32rpx;
  color: #dd7724;
  font-weight: bold;
  z-index: 1;
}

.price-input {
  padding-left: 60rpx;
  font-size: 32rpx;
  font-weight: 700;
  color: #dd7724;
}

/* 发布按钮 */
.publish-btn {
  width: 100%;
  height: 88rpx;
  background: #ffd262 !important; 
  color: #333333 !important; 
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 700;
  margin-top: 30rpx;
  transition: all 0.2s ease;
  letter-spacing: 2rpx;
}

.publish-btn:active {
  transform: scale(0.99);
}

.publish-btn:disabled {
  background: #cccccc !important;
  color: #999999 !important;
  transform: none;
}

/* 发布提示 */
.publish-tips {
  text-align: center;
  margin-top: 30rpx;
  padding: 0;
  border-radius: 0;
  border: none;
  background: transparent;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.tips-text {
  font-size: 26rpx;
  color: #666666;
  font-weight: 500;
  text-decoration: underline;
}

.tips-icon {
  font-size: 24rpx;
  color: #ffd262;
}

/* 图片操作面板 */
.image-action-sheet {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s ease;
}

.image-action-sheet.show {
  visibility: visible;
  opacity: 1;
}

.action-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.action-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-radius: 24rpx 24rpx 0 0;
  padding: 40rpx;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.image-action-sheet.show .action-content {
  transform: translateY(0);
}

.action-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.action-title {
  font-size: 36rpx;
  color: #333333;
  font-weight: 700;
}

.action-close {
  font-size: 40rpx;
  color: #999999;
  font-weight: bold;
  padding: 10rpx;
}

.action-buttons {
  display: flex;
  gap: 40rpx;
  justify-content: center;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 40rpx;
  border-radius: 16rpx;
  transition: all 0.2s ease;
  min-width: 200rpx;
}

.action-btn:active {
  transform: scale(0.95);
}

.take-photo {
  background: #bad467;
  color: white;
}

.choose-album {
  background: #ffd262;
  color: white;
}

.btn-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.btn-text {
  font-size: 30rpx;
  font-weight: 600;
}

/* 自定义标签模态框 */
.custom-tag-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
}

.custom-tag-mask {
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.custom-tag-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  max-width: 600rpx;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
}

.custom-tag-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.custom-tag-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #333333;
}

.custom-tag-close {
  font-size: 40rpx;
  color: #999999;
  padding: 10rpx;
  font-weight: bold;
}

.custom-tag-body {
  padding: 40rpx 30rpx;
}

.input-container {
  position: relative;
  margin-bottom: 20rpx;
}

.custom-tag-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  background: #fafafa;
  box-sizing: border-box;
}

.custom-tag-input:focus {
  border-color: #ffd262;
  background: white;
}

.custom-tag-modal .char-count {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 26rpx;
  color: #999999;
}

.custom-tag-modal .char-count.exceed {
  color: #dd7724;
  font-weight: bold;
}

.custom-tag-tip {
  font-size: 26rpx;
  color: #999999;
  text-align: center;
}

.custom-tag-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.custom-tag-btn {
  flex: 1;
  height: 88rpx;
  border: none;
  border-radius: 0;
  font-size: 30rpx;
  font-weight: 600;
  background: transparent;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.custom-tag-btn:active {
  background: #f8f8f8;
}

.custom-tag-btn.cancel {
  color: #666666;
  border-right: 1rpx solid #f0f0f0;
}

.custom-tag-btn.confirm {
  color: #ffd262;
}

.placeholder {
  color: #cccccc;
}


