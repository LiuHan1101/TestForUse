/* 愿望卡片 */
.wish-card {
  background: white;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 15rpx;
  position: relative;
  min-height: 160rpx;
}

/* 愿望标题 - 在第一行，仿照商品标题样式 */
.wish-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 12rpx;
  line-height: 36rpx;
  width: 100%;
}

/* 内容区域 - 描述在图片上方 */
.wish-content {
  margin-bottom: 12rpx;
}

.wish-description-section {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.wish-description {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.4;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 底部区域：标签和价格 */
.wish-footer {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  padding-top: 12rpx;
  border-top: 1rpx solid #f0f0f0;
  position: relative;
}

/* 左侧：自定义标签 */
.custom-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 6rpx;
  flex: 1;
  align-items: flex-end;
}

.custom-tag {
  background: #f0f7ff;
  color: #1890ff;
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
  font-size: 20rpx;
  font-weight: 500;
  max-width: 120rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  border: 1rpx solid #91d5ff;
}

/* 右下角：价格/换物 */
.price-section {
  display: flex;
  align-items: center;
  gap: 10rpx;
  position: relative; 
  margin-left: auto; 
  flex-shrink: 0; 
}

.price-display {
  font-size: 32rpx;
  font-weight: bold;
  color: #e46225;
  text-align: right;
  line-height: 40rpx;
}

.swap-display {
  font-size: 24rpx;
  color: #009432;
  background: #e6f7ee;
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
  display: inline-block;
  line-height: 28rpx;
}

/* 多张图片显示区域 - 调整尺寸 */
.wish-images-section {
  margin-bottom: 12rpx;
}

.images-grid {
  display: flex;
  gap: 6rpx;
  justify-content: space-between;
}

.images-grid.single-grid {
  justify-content: flex-start;
}

.image-item {
  flex: 1;
  height: 160rpx; /* 缩小图片高度 */
  border-radius: 8rpx;
  overflow: hidden;
  background: var(--accent-beige);
  position: relative;
  aspect-ratio: 1/1;
}

.image-item.single {
  height: 160rpx;
  width: 160rpx;
  flex: none;
}

.wish-image {
  width: 100%;
  height: 100%;
  display: block;
  object-fit: cover;
}

/* 图片数量提示 */
.image-count {
  position: absolute;
  bottom: 6rpx;
  right: 6rpx;
  background: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  gap: 2rpx;
  font-size: 18rpx;
}

.count-icon {
  font-size: 16rpx;
}

.count-number {
  font-weight: 600;
}

/* 其他原有样式保持不变 */
.wishpool-page {
  min-height: 100vh;
  background: var(--neutral-light);
}

.search-section {
  padding: 20rpx 32rpx;
  background: white;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-bar {
  position: relative;
  display: flex;
  align-items: center;
}

.search-input {
  flex: 1;
  height: 80rpx;
  background: #f8f9fa;
  border-radius: 40rpx;
  padding: 0 80rpx 0 32rpx;
  font-size: 28rpx;
  color: var(--neutral-text);
}

.search-icon {
  position: absolute;
  right: 32rpx;
  font-size: 32rpx;
  color: var(--neutral-gray);
}

.main-content {
  display: flex;
  min-height: calc(100vh - 200rpx);
  width: 100vw;
}

.sidebar-section {
  width: 180rpx;
  background: white;
  border-right: 1rpx solid var(--neutral-gray);
  flex-shrink: 0;
  overflow-y: auto;
}

.category-sidebar {
  width: 100%;
}

.content-area {
  flex: 1;
  padding: 20rpx;
  background: var(--neutral-light);
  overflow-y: auto;
  box-sizing: border-box;
  min-width: 0;
}

.category-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid var(--primary-pink);
}

.category-title {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--neutral-text);
  margin-right: 10rpx;
}

.wish-count {
  font-size: 20rpx;
  color: var(--neutral-gray);
}

.wish-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.empty-state {
  text-align: center;
  padding: 60rpx 0;
  color: var(--neutral-gray);
}

.empty-icon {
  font-size: 70rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 26rpx;
  margin-bottom: 10rpx;
  color: var(--neutral-dark);
}

.empty-desc {
  font-size: 20rpx;
}

.loading-state {
  text-align: center;
  padding: 30rpx 0;
  color: var(--neutral-gray);
}

.loading-text {
  font-size: 22rpx;
}
