/* pages/wishpool/wishpool.wxss */
.wishpool-page {
  min-height: 100vh;
  background: var(--neutral-light);
}

/* 搜索栏 */
.search-section {
  padding: 20rpx 32rpx;
  background: white;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-bar {
  position: relative;
  display: flex;
  align-items: center;
}

.search-input {
  flex: 1;
  height: 80rpx;
  background: #f8f9fa;
  border-radius: 40rpx;
  padding: 0 80rpx 0 32rpx;
  font-size: 28rpx;
  color: var(--neutral-text);
}

.search-icon {
  position: absolute;
  right: 32rpx;
  font-size: 32rpx;
  color: var(--neutral-gray);
}

/* 主要内容区域 */
.main-content {
  display: flex;
  min-height: calc(100vh - 200rpx); /* 恢复合理高度 */
}

/* 侧边栏 */
.sidebar-section {
  width: 240rpx;
  background: white;
  border-right: 1rpx solid var(--neutral-gray);
  flex-shrink: 0;
}

.category-sidebar {
  --td-side-bar-item-height: 120rpx;
  --td-side-bar-item-font-size: 28rpx;
}

/* 内容区域 */
.content-area {
  flex: 1;
  padding: 32rpx;
  background: var(--neutral-light);
  min-height: 100%;
}

/* 分类标题 */
.category-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid var(--primary-pink);
}

.category-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--neutral-text);
  margin-right: 16rpx;
}

.wish-count {
  font-size: 24rpx;
  color: var(--neutral-gray);
}

/* 愿望列表 */
.wish-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 愿望卡片 */
.wish-card {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
  position: relative;
}

.wish-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 愿望标题 */
.wish-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--neutral-text);
  margin-bottom: 20rpx;
  line-height: 1.4;
}

/* 愿望元信息 */
.wish-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid var(--neutral-gray);
}

.user-info {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.user-name {
  font-size: 26rpx;
  color: var(--neutral-dark);
  font-weight: 500;
}

.create-time {
  font-size: 24rpx;
  color: var(--neutral-gray);
}

/* 愿望图片 */
.wish-image-section {
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background: var(--accent-beige);
}

.wish-image {
  width: 100%;
  height: 300rpx;
  display: block;
}

/* 愿望描述 */
.wish-description {
  font-size: 26rpx;
  color: var(--neutral-dark);
  line-height: 1.5;
  margin-bottom: 24rpx;
  padding: 16rpx;
  background: var(--neutral-light);
  border-radius: 8rpx;
  border-left: 4rpx solid var(--primary-pink);
}

/* 愿望底部 */
.wish-footer {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.wish-tags {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.category-tag {
  background: var(--accent-yellow);
  color: var(--neutral-text);
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.transaction-type {
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.transaction-type.cash {
  background: #e8f5e8;
  color: #52c41a;
}

.transaction-type.swap {
  background: #e6f7ff;
  color: #1890ff;
}

.transaction-type.both {
  background: #fff7e6;
  color: #fa8c16;
}

/* 价格区域 */
.price-section {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

/* 价格显示 - 白底橙色粗体 */
.price-display {
  font-size: 36rpx;
  font-weight: 800;
  color: var(--primary-coral);
  text-shadow: 0 2rpx 4rpx rgba(244, 166, 163, 0.2);
  background: white;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  border: 2rpx solid var(--primary-coral);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 0;
  color: var(--neutral-gray);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  margin-bottom: 16rpx;
  color: var(--neutral-dark);
}

.empty-desc {
  font-size: 26rpx;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 60rpx 0;
  color: var(--neutral-gray);
}

.loading-text {
  font-size: 28rpx;
}