/* pages/wishpool/wishpool.wxss */

/* 全局样式 */
page {
  background: #ffffff;
  height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

/* 1. 根容器 */
.wishpool-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

/* 搜索栏 */
.search-section {
  flex-shrink: 0; 
  padding: 16rpx 32rpx;
  background: #ffffff;
  position: sticky;
  top: 0;
  z-index: 100;
  border-bottom: 1rpx solid #e8e8e8;
}

.search-bar {
  position: relative;
  display: flex;
  align-items: center;
  width: 100%;
}

.search-input {
  flex: 1;
  height: 72rpx;
  background: #f8f9fa;
  border-radius: 36rpx;
  padding: 0 80rpx 0 32rpx;
  font-size: 28rpx;
  color: #333333;
  border: 1rpx solid #e8e8e8;
  width: 100%;
}

.search-icon {
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 42rpx;
  height: 42rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 3. 主要内容区域 */
.main-content {
  flex: 1;
  display: flex;
  position: relative;
  overflow: hidden;
}

/* 4. 左侧分类栏  */
.sidebar-section {
  width: 160rpx;
  min-width: 160rpx;
  background: #ffffff;
  display: flex;
  flex-direction: column;
  height: 96%; 
  border-right: 2rpx solid  #d8d8d8;
  overflow-y: auto;
}

.category-list {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 20rpx 0;
  min-height: 100%; 
}

.category-item {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 70rpx;
  font-size: 28rpx;
  color: #000000;
  margin: 10rpx 12rpx;
  border-radius: 10rpx;
  transition: all 0.2s;
  text-align: center;
  line-height: 1.4;
  padding: 0 16rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  flex-shrink: 0;
  font-weight: 500;
  background: #ffffff; 
  border: 2rpx solid #ffffff;
}



/* 6. 右侧内容区域 */
.content-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.category-header {
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.wish-list {
  flex: 1;
  overflow-y: auto;
}

.category-item.all {
  background: #fdf3d8; 
  border: 2rpx solid #fdf3d8; 
  color: #000000; 
  font-weight: 600;
}


.category-item.active {
  background: #ffd262; 
  border: 2rpx solid #ffd262; 
  color: #000000;
  font-weight: 600;
}


.category-item.all.active {
  background: #ffd262; 
  border: 2rpx solid #ffd262; 
  color: #000000;
  font-weight: 600;
}

/* 右侧内容区域 - 独立滚动 */
.content-area {
  flex: 1;
  min-width: 0;
  background: #ffffff;
  height: 100%; /* 充满父容器 */
  overflow-y: auto; /* 独立滚动 */
  padding: 20rpx;
  box-sizing: border-box;
}

/* 分类标题 */
.category-header {
  display: flex;
  align-items: center;
  padding-bottom: 12rpx;
  margin-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.category-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #333333;
  margin-right: 10rpx;
}

.wish-count {
  font-size: 22rpx;
  color: #919191;
}

/* 愿望卡片 */
.wish-list {
  display: flex;
  flex-direction: column;
  gap: 14rpx;
}

.wish-card {
  background: #ffffff;
  border-radius: 10rpx;
  padding: 24rpx;
  border: 1rpx solid #f0f0f0;
  transition: all 0.2s;
}

.wish-card:active {
  background: #fafafa;
}

/* 愿望标题 */
.wish-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

/* 愿望描述 */
.wish-description {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.4;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
  max-height: 73rpx;
}

/* 图片区域 */
.wish-images-section {
  margin-bottom: 16rpx;
}

.images-grid {
  display: flex;
  gap: 8rpx;
  justify-content: flex-start;
}

.image-item {
  flex: none;
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background: #f8f8f8;
  position: relative;
}

.image-item.single {
  width: 160rpx;
  height: 160rpx;
}

.wish-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 图片数量提示 */
.image-count {
  position: absolute;
  bottom: 6rpx;
  right: 6rpx;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
  font-size: 16rpx;
}

/* 底部区域 */
.wish-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 0;
  border-top: none;
  margin-top: 0;
  min-height: 44rpx;
}

/* 左侧tag */
.wish-tags {
  flex: 1;
  display: flex;
  align-items: center;
}

.custom-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  align-items: center;
}

.custom-tag {
  background: #bad467;
  color: #ffffff;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
  font-weight: 500;
  max-width: 110rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  border: none;
  line-height: 1.2;
  height: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 右侧出物方式显示 */
.price-section {
  display: flex;
  justify-content: flex-end;
  margin-top: auto;
  font-size: 24rpx;
  color: #ffd262;
  padding: 6rpx 16rpx;
  background: #fef6e7;
  border-radius: 6rpx;
}

/* 价格显示隐藏 */
.price-display {
  display: none;
}



/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.3;
  color: #cccccc;
}

.empty-text {
  font-size: 26rpx;
  color: #919191;
  margin-bottom: 8rpx;
}

.empty-desc {
  font-size: 22rpx;
  color: #bbbbbb;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 60rpx 0;
}

.loading-text {
  font-size: 24rpx;
  color: #919191;
}

/* 滚动条隐藏 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .search-section {
    padding: 12rpx 24rpx;
  }
  
  .sidebar-section {
    width: 140rpx;
    min-width: 140rpx;
  }
  
  .main-content {
    height: calc(100vh - 100rpx);
  }
  
  .category-item {
    font-size: 24rpx;
    height: 65rpx;
    margin: 8rpx 10rpx;
    border-radius: 8rpx;
    padding: 0 12rpx;
  }
  
  .content-area {
    padding: 16rpx;
  }
  
  .category-list {
    padding: 15rpx 0;
  }
  
  .image-item {
    width: 140rpx;
    height: 140rpx;
  }
  
  .image-item.single {
    width: 140rpx;
    height: 140rpx;
  }
  
  .swap-display {
    font-size: 22rpx;
    padding: 3rpx 10rpx;
  }
}