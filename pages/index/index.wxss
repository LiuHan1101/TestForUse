/* pages/index/index.wxss */
.container {
  padding: 20rpx;
  background: #ffffff;
  min-height: 100vh;
}

/* 搜索栏 */
.search-bar {
  margin-bottom: 30rpx;
  width: 100%;
}

.search-input {
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-placeholder {
  color: #999;
  font-size: 28rpx;
}

/* 标签切换 */
.tabs {
  display: flex;
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #eee;
}

/* 修改标签样式 */
.tab {
  flex: 1;
  text-align: center;
  padding: 25rpx 0;
  font-size: 32rpx;
  color:  #1a1818;
  font-weight: bold;
  transition: all 0.2s ease;
  position: relative;
  background: #fdf3d8; /* 未激活状态 */
}

.tab.active {
  color:  #1a1818;
  font-weight: bold;
  background: #FFD262; /* 激活状态*/
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 120rpx;
  height: 4rpx;
  background: #666; /* 底部边框保持深色 */
  border-radius: 2rpx;
}

/* 商品列表 */
.goods-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 商品项 */
.goods-item {
  background: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  padding: 24rpx;
  display: flex;
  height: 250rpx; 
  position: relative;
}

.goods-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
  object-fit: cover;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/* 商品头部（标题和价格） */
.goods-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.goods-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.goods-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #e46225;
  flex-shrink: 0;
  text-align: right;
}

/* 商品元信息（用户和时间） */
.goods-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.goods-user {
  font-size: 26rpx;
  color: #666;
}

.goods-time {
  font-size: 24rpx;
  color: #999;
}

/* 商品标签 */
.goods-tags {
  margin-bottom: 16rpx;
}

.goods-tag {
  font-size: 24rpx;
  color: #ffffff;
  background: #bad476; /* 指定颜色 */
  padding: 8rpx 24rpx; /* 宽度比文字稍大 */
  border-radius: 20rpx;
  display: inline-block;
  margin-right: 12rpx;
  margin-bottom: 8rpx;
}

/* 商品底部（交易类型） */
.goods-footer {
  display: flex;
  justify-content: flex-end;
  margin-top: auto;
}

.goods-type {
  font-size: 24rpx;
  color: #999;
  padding: 6rpx 16rpx;
  background: #f5f5f5;
  border-radius: 6rpx;
}