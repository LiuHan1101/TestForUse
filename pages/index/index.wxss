/* pages/index/index.wxss */
.container {
    padding: 20rpx;
  }
  
  .search-bar {
    margin-bottom: 30rpx;
  }
  
  .search-input {
    height: 80rpx;
    background: #f5f5f5;
    border-radius: 40rpx;
    padding: 0 30rpx;
    font-size: 28rpx;
  }
  
  .tabs {
    display: flex;
    margin-bottom: 30rpx;
    border-bottom: 1rpx solid #eee;
  }
  
  .tab {
    flex: 1;
    text-align: center;
    padding: 20rpx 0;
    font-size: 32rpx;
    color: #666;
  }
  
  .tab.active {
    color: #ffffff;
    border-bottom: 4rpx solid #a55f6e;
  }
  
  .goods-list {
    display: flex;
    flex-direction: column;
    gap: 30rpx;
  }
  
  .goods-item {
    display: flex;
    background: white;
    border-radius: 20rpx;
    padding: 30rpx;
    box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
  }
  
  .goods-image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
    margin-right: 30rpx;
  }
  
  .goods-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  
  .goods-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
  }
  
  .goods-price {
    font-size: 36rpx;
    color: #ff6b35;
    font-weight: bold;
  }
  
  .goods-swap {
    font-size: 28rpx;
    color: #916275;
  }
  
  .goods-user {
    font-size: 24rpx;
    color: #999;
  }