/* pages/register/register.wxss */
.register-container {
  min-height: 100vh;
  background-color: #f8f9fa;
  padding: 20rpx 30rpx 120rpx;
  box-sizing: border-box;
}

/* 顶部标题 */
.page-header {
  padding: 40rpx 0 30rpx;
  text-align: center;
}

.title {
  display: block;
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

/* 头像上传区域 */
.avatar-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.avatar-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 30rpx;
}

.avatar-upload {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-preview {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  margin-bottom: 20rpx;
  border: 4rpx dashed #e0e0e0;
  position: relative;
}

.avatar-preview:active {
  opacity: 0.9;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.avatar-placeholder .icon {
  font-size: 60rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.avatar-placeholder .hint {
  font-size: 28rpx;
  color: #999;
}

/* 头像操作按钮 */
.avatar-actions {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.avatar-action-btn {
  min-width: 120rpx;
  height: 56rpx;
  line-height: 56rpx;
  padding: 0 20rpx;
  border-radius: 28rpx;
  font-size: 26rpx;
  border: none;
}

.avatar-action-btn::after {
  border: none;
}

.view-btn {
  background: #f0f0f0;
  color: #666;
}

.clear-btn {
  background: #fff0f0;
  color: #ff4444;
}

.avatar-tip {
  font-size: 26rpx;
  color: #999;
  text-align: center;
}

/* 表单区域 */
.form-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.form-item {
  margin-bottom: 50rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.label-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-right: 8rpx;
}

.required {
  color: #ff4444;
  font-size: 28rpx;
}

.form-input {
  height: 88rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
  color: #333;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.form-input:focus {
  border-color: #007aff;
  background: #fff;
}

.placeholder {
  color: #999;
  font-size: 30rpx;
}

.form-tip {
  font-size: 26rpx;
  color: #999;
  margin-top: 16rpx;
  line-height: 1.4;
}

/* 提示信息框 */
.info-box {
  background: #e8f4ff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-top: 40rpx;
  display: flex;
  align-items: flex-start;
}

.info-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  line-height: 1;
  margin-top: 4rpx;
}

.info-content {
  flex: 1;
}

.info-text {
  display: block;
  font-size: 26rpx;
  color: #007aff;
  line-height: 1.5;
  margin-bottom: 8rpx;
}

.info-subtext {
  display: block;
  font-size: 24rpx;
  color: #66aaff;
  line-height: 1.4;
}

/* 提交区域 */
.submit-section {
  padding: 20rpx 0;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #007aff, #0056cc);
  border-radius: 48rpx;
  font-size: 34rpx;
  font-weight: 500;
  color: #fff;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.submit-btn::after {
  border: none;
}

.button-hover {
  opacity: 0.9;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 20rpx rgba(0, 122, 255, 0.3);
}

.submit-btn[disabled] {
  background: #ccc;
  color: #fff;
  opacity: 0.7;
  box-shadow: none;
}

/* 跳过区域 */
.skip-area {
  margin-top: 40rpx;
}

.divider {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.divider-line {
  flex: 1;
  height: 1rpx;
  background: #e0e0e0;
}

.divider-text {
  margin: 0 30rpx;
  font-size: 28rpx;
  color: #999;
}

.skip-btn {
  width: 100%;
  height: 80rpx;
  background: #fff;
  border: 2rpx solid #e0e0e0;
  border-radius: 40rpx;
  font-size: 30rpx;
  color: #666;
  display: flex;
  align-items: center;
  justify-content: center;
}

.skip-btn::after {
  border: none;
}

.skip-btn-hover {
  background: #f8f9fa;
  border-color: #007aff;
  color: #007aff;
}

/* 底部提示 */
.footer-tip {
  position: fixed;
  bottom: 40rpx;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  padding: 0 30rpx;
}

.link-text {
  color: #007aff;
}