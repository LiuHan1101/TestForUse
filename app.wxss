/**app.wxss**/
/* 莫兰迪色系 - 红粉黄配色 */

/* 定义莫兰迪色系变量 */
page {
    /* 主色调 - 红粉系列 */
    --primary-red: #E8B4B8;    /* 莫兰迪粉红 */
    --primary-pink: #F5D5D0;   /* 莫兰迪浅粉 */
    --primary-coral: #F4A6A3;  /* 莫兰迪珊瑚粉 */
    
    /* 辅助色 - 黄色系列 */
    --accent-yellow: #F7E4C8;  /* 莫兰迪奶黄 */
    --accent-beige: #F2E8D5;   /* 莫兰迪米白 */
    --accent-gold: #E8D0B3;    /* 莫兰迪金 */
    
    /* 中性色 */
    --neutral-light: #FAF7F2;  /* 浅米白 */
    --neutral-gray: #D8CFC7;   /* 莫兰迪灰 */
    --neutral-dark: #8C7B6C;   /* 深棕灰 */
    --neutral-text: #5D534A;   /* 文字色 */
    
    /* 功能色 */
    --success: #A8D5BA;        /* 莫兰迪绿 */
    --warning: #E8D0B3;        /* 莫兰迪黄 */
    --error: #E8B4B8;          /* 莫兰迪红 */
  }
  
  /* 全局页面样式 */
  page {
    background-color: var(--neutral-light);
    font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', SimSun, sans-serif;
    color: var(--neutral-text);
    line-height: 1.6;
  }
  
  /* 容器基础样式 */
  .container {
    min-height: 100vh;
    padding: 20rpx;
    box-sizing: border-box;
    background: var(--neutral-light);
  }
  
  /* 通用卡片样式 */
  .card {
    background: linear-gradient(135deg, var(--primary-pink), var(--accent-beige));
    border-radius: 24rpx;
    padding: 32rpx;
    box-shadow: 
      0 8rpx 32rpx rgba(140, 123, 108, 0.08),
      inset 0 1rpx 0 rgba(255, 255, 255, 0.6);
    margin-bottom: 30rpx;
    border: 1rpx solid rgba(232, 180, 184, 0.2);
  }
  
  /* 按钮基础样式 */
  .btn-primary {
    background: linear-gradient(135deg, var(--primary-coral), var(--primary-red));
    color: white;
    border-radius: 16rpx;
    border: none;
    box-shadow: 0 4rpx 16rpx rgba(232, 180, 184, 0.3);
    transition: all 0.3s ease;
  }
  
  .btn-primary:active {
    background: linear-gradient(135deg, var(--primary-red), #D4A2A6);
    transform: translateY(2rpx);
    box-shadow: 0 2rpx 8rpx rgba(232, 180, 184, 0.4);
  }
  
  .btn-secondary {
    background: var(--accent-yellow);
    color: var(--neutral-text);
    border-radius: 16rpx;
    border: 1rpx solid var(--accent-gold);
    box-shadow: 0 2rpx 8rpx rgba(247, 228, 200, 0.3);
  }
  
  /* 输入框基础样式 */
  .input-base {
    background: rgba(255, 255, 255, 0.8);
    border: 2rpx solid var(--primary-pink);
    border-radius: 16rpx;
    padding: 24rpx 32rpx;
    font-size: 28rpx;
    color: var(--neutral-text);
    backdrop-filter: blur(10rpx);
  }
  
  .input-base::placeholder {
    color: var(--neutral-gray);
  }
  
  .input-base:focus {
    border-color: var(--primary-coral);
    background: rgba(255, 255, 255, 0.9);
    box-shadow: 0 0 0 4rpx rgba(244, 166, 163, 0.1);
  }
  
  /* 标签样式 */
  .tab {
    background: rgba(245, 213, 208, 0.3);
    border-radius: 20rpx;
    margin: 0 10rpx;
    padding: 20rpx 40rpx;
    transition: all 0.3s ease;
  }
  
  .tab.active {
    background: linear-gradient(135deg, var(--primary-pink), var(--primary-coral));
    color: white;
    box-shadow: 0 4rpx 16rpx rgba(232, 180, 184, 0.3);
  }
  
  /* 文字颜色 */
  .text-primary {
    color: var(--primary-red);
  }
  
  .text-accent {
    color: var(--accent-gold);
  }
  
  .text-secondary {
    color: var(--neutral-dark);
  }
  
  .text-muted {
    color: var(--neutral-gray);
  }
  
  /* 布局工具类 */
  .flex {
    display: flex;
  }
  
  .flex-center {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .flex-between {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  /* 边距工具类 */
  .mt-20 { margin-top: 20rpx; }
  .mb-20 { margin-bottom: 20rpx; }
  .ml-20 { margin-left: 20rpx; }
  .mr-20 { margin-right: 20rpx; }
  
  .pt-20 { padding-top: 20rpx; }
  .pb-20 { padding-bottom: 20rpx; }
  .pl-20 { padding-left: 20rpx; }
  .pr-20 { padding-right: 20rpx; }
  
  /* 文本对齐 */
  .text-center { text-align: center; }
  .text-left { text-align: left; }
  .text-right { text-align: right; }
  
  /* 字体大小 */
  .font-24 { font-size: 24rpx; }
  .font-28 { font-size: 28rpx; }
  .font-32 { font-size: 32rpx; }
  .font-36 { font-size: 36rpx; }
  .font-40 { font-size: 40rpx; }
  
  /* 空白状态提示 */
  .empty-state {
    text-align: center;
    padding: 120rpx 0;
    color: var(--neutral-gray);
  }
  
  .empty-state image {
    width: 160rpx;
    height: 160rpx;
    margin-bottom: 40rpx;
    opacity: 0.6;
    filter: grayscale(0.3);
  }
  
  /* 底部安全区域 */
  .safe-area {
    padding-bottom: env(safe-area-inset-bottom);
  }
  
  /* 渐变背景 */
  .gradient-bg {
    background: linear-gradient(135deg, var(--primary-pink), var(--accent-yellow));
  }
  
  .gradient-bg-reverse {
    background: linear-gradient(135deg, var(--accent-yellow), var(--primary-pink));
  }
  
  /* 阴影效果 */
  .shadow-soft {
    box-shadow: 0 8rpx 40rpx rgba(140, 123, 108, 0.12);
  }
  
  .shadow-medium {
    box-shadow: 0 12rpx 48rpx rgba(140, 123, 108, 0.15);
  }
  
  /* 边框样式 */
  .border-light {
    border: 1rpx solid rgba(232, 180, 184, 0.3);
  }
  
  .border-medium {
    border: 1rpx solid rgba(232, 180, 184, 0.5);
  }
  
  /* 毛玻璃效果 */
  .blur-bg {
    backdrop-filter: blur(20rpx);
    background: rgba(255, 255, 255, 0.8);
  }
  
  /* 价格标签 */
  .price-tag {
    background: linear-gradient(135deg, var(--primary-red), var(--primary-coral));
    color: white;
    padding: 8rpx 20rpx;
    border-radius: 12rpx;
    font-weight: bold;
    display: inline-block;
  }
  
  /* 状态标签 */
  .status-tag {
    padding: 6rpx 16rpx;
    border-radius: 12rpx;
    font-size: 22rpx;
    display: inline-block;
  }
  
  .status-success {
    background: var(--success);
    color: #ffffff;
  }
  
  .status-warning {
    background: var(--warning);
    color: #8C6D3D;
  }
  
  .status-error {
    background: var(--error);
    color: #8C4A4D;
  }